---
// Este componente se renderiza del lado del cliente
---

<div id="auth-button-wrapper">
  <!-- Loading state -->
  <div class="auth-loading">
    <div class="spinner"></div>
  </div>
</div>

<style is:global>
  #auth-button-wrapper {
    display: flex;
    align-items: center;
    position: relative; /* Needed for dropdown positioning */
  }

  .auth-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
  }

  .spinner {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(139, 92, 246, 0.2);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .auth-btn {
    display: flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
    padding: 0.5rem 1rem !important;
    border-radius: 50px !important;
    font-weight: 600 !important;
    font-size: 0.85rem !important;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    border: none;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent, #ec4899)) !important;
    color: white !important;
    box-shadow: 0 2px 8px rgba(139, 92, 246, 0.25) !important;
    white-space: nowrap;
  }

  .auth-btn:hover {
    transform: translateY(-1px) !important;
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.35) !important;
  }

  .auth-btn svg {
    width: 16px !important;
    height: 16px !important;
  }

  /* Dropdown Styles */
  .profile-dropdown-container {
    position: relative;
    display: inline-block;
  }

  .profile-btn {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.375rem 0.75rem;
    border-radius: 50px;
    background: rgba(139, 92, 246, 0.1);
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid rgba(139, 92, 246, 0.2);
    cursor: pointer;
    white-space: nowrap;
  }

  .profile-btn:hover, .profile-dropdown-container:hover .profile-btn {
    background: rgba(139, 92, 246, 0.2);
    border-color: rgba(139, 92, 246, 0.4);
  }

  .profile-avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--color-primary);
  }

  .profile-avatar-placeholder {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent, #ec4899));
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: white;
    font-size: 0.75rem;
  }

  .profile-name {
    font-weight: 600;
    font-size: 0.85rem;
    max-width: 100px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: 0.5rem;
    width: 260px; /* Aumentado de 200px a 260px */
    background: var(--color-surface);
    border: 1px solid rgba(139, 92, 246, 0.2);
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(10px);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 100;
    padding: 0.5rem;
    overflow: hidden;
  }

  .profile-dropdown-container:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  /* Invisible bridge to prevent menu from closing when moving cursors */
  .profile-dropdown-container::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: 0.5rem;
  }

  .dropdown-header {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    margin-bottom: 0.5rem;
  }

  .dropdown-user-name {
    display: block;
    font-weight: 600;
    color: var(--color-text);
  }

  .dropdown-user-email {
    display: block;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin-top: 0.2rem;
    /* Truncate long emails */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  /* Restoring missing styles */
  .dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 1rem;
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.2s;
    border-radius: 8px;
    font-size: 0.9rem;
  }

  .dropdown-item:hover {
    background: rgba(139, 92, 246, 0.1);
    color: var(--color-primary);
  }

  .dropdown-item svg {
    width: 16px;
    height: 16px;
    opacity: 0.7;
  }

  .dropdown-item:hover svg {
    opacity: 1;
  }

  .dropdown-divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.05);
    margin: 0.5rem 0;
  }

  .dropdown-item.logout {
    color: #ef4444;
  }

  .dropdown-item.logout:hover {
    background: rgba(239, 68, 68, 0.1);
  }

  @media (max-width: 768px) {
    .profile-name {
      display: none;
    }
  }
</style>

<script>
  // Fetch current user and render appropriate button
  async function loadAuthButton() {
    const wrapper = document.getElementById('auth-button-wrapper');
    if (!wrapper) return;

    try {
      const response = await fetch('/api/auth/me');
      const data = await response.json();

      if (data.user) {
        // User is logged in - show profile dropdown
        const initial = data.user.name.charAt(0).toUpperCase();
        
        wrapper.innerHTML = `
          <div class="profile-dropdown-container">
            <button class="profile-btn">
              ${data.user.picture 
                ? `<img src="${data.user.picture}" alt="${data.user.name}" class="profile-avatar" />`
                : `<div class="profile-avatar-placeholder">${initial}</div>`
              }
              <span class="profile-name">${data.user.name}</span>
            </button>
            
            <div class="dropdown-menu">
              <div class="dropdown-header">
                <span class="dropdown-user-name">${data.user.name}</span>
                <span class="dropdown-user-email" title="${data.user.email || ''}">${data.user.email || ''}</span>
              </div>
              
              <a href="/perfil" class="dropdown-item">
                <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                Mi Perfil
              </a>
              
              <a href="/favoritos" class="dropdown-item">
                <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg>
                Mis Favoritos
              </a>
              
              <div class="dropdown-divider"></div>
              
              <a href="/api/auth/logout" class="dropdown-item logout">
                <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                Cerrar Sesión
              </a>
            </div>
          </div>
        `;
      } else {
        // No user - show login button
        wrapper.innerHTML = `
          <a href="/api/auth/google/login" class="auth-btn">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
            </svg>
            <span>Iniciar Sesión</span>
          </a>
        `;
      }
    } catch (error) {
      console.error('Error loading auth button:', error);
      // Default to login button on error
      wrapper.innerHTML = `
        <a href="/api/auth/google/login" class="auth-btn">
          <span>Iniciar Sesión</span>
        </a>
      `;
    }
  }

  // Load on DOMContentLoaded
  document.addEventListener('DOMContentLoaded', loadAuthButton);
</script>
