---
// Este componente se renderiza del lado del cliente
---

<div id="auth-button-wrapper">
  <!-- Loading state -->
  <div class="auth-loading">
    <div class="spinner"></div>
  </div>
</div>

<style is:global>
  #auth-button-wrapper {
    display: flex;
    align-items: center;
  }

  .auth-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
  }

  .spinner {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(139, 92, 246, 0.2);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .auth-btn {
    display: flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
    padding: 0.5rem 1rem !important;
    border-radius: 50px !important;
    font-weight: 600 !important;
    font-size: 0.85rem !important;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    border: none;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent, #ec4899)) !important;
    color: white !important;
    box-shadow: 0 2px 8px rgba(139, 92, 246, 0.25) !important;
    white-space: nowrap;
  }

  .auth-btn:hover {
    transform: translateY(-1px) !important;
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.35) !important;
  }

  .auth-btn svg {
    width: 16px !important;
    height: 16px !important;
  }

  .profile-btn {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.375rem 0.75rem;
    border-radius: 50px;
    background: rgba(139, 92, 246, 0.1);
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid rgba(139, 92, 246, 0.2);
    white-space: nowrap;
  }

  .profile-btn:hover {
    background: rgba(139, 92, 246, 0.2);
    transform: translateY(-1px);
  }

  .profile-avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--color-primary);
  }

  .profile-avatar-placeholder {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent, #ec4899));
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: white;
    font-size: 0.75rem;
  }

  .profile-name {
    font-weight: 600;
    font-size: 0.85rem;
    max-width: 100px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .profile-name {
      display: none;
    }
  }
</style>

<script>
  // Fetch current user and render appropriate button
  async function loadAuthButton() {
    const wrapper = document.getElementById('auth-button-wrapper');
    if (!wrapper) return;

    try {
      const response = await fetch('/api/auth/me');
      const data = await response.json();

      if (data.user) {
        // User is logged in - show profile button
        const initial = data.user.name.charAt(0).toUpperCase();
        wrapper.innerHTML = `
          <a href="/perfil" class="profile-btn">
            ${data.user.picture 
              ? `<img src="${data.user.picture}" alt="${data.user.name}" class="profile-avatar" />`
              : `<div class="profile-avatar-placeholder">${initial}</div>`
            }
            <span class="profile-name">${data.user.name}</span>
          </a>
        `;
      } else {
        // No user - show login button
        wrapper.innerHTML = `
          <a href="/api/auth/google/login" class="auth-btn">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
            </svg>
            <span>Iniciar Sesión</span>
          </a>
        `;
      }
    } catch (error) {
      console.error('Error loading auth button:', error);
      // Default to login button on error
      wrapper.innerHTML = `
        <a href="/api/auth/google/login" class="auth-btn">
          <span>Iniciar Sesión</span>
        </a>
      `;
    }
  }

  // Load on DOMContentLoaded
  document.addEventListener('DOMContentLoaded', loadAuthButton);
</script>
