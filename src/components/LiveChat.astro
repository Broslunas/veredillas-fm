---
interface Props {
  slug: string;
}

const { slug } = Astro.props;

// Basic user check for initial state if possible (optional as client handles it too)
import { verifyToken } from '../lib/auth';
import dbConnect from '../lib/mongodb';
import User from '../models/User';

let currentUser = null;
try {
    const token = Astro.cookies.get('auth-token')?.value;
    if (token) {
        const payload = verifyToken(token);
        if (payload) {
             await dbConnect();
             currentUser = await User.findById(payload.userId).lean();
        }
    }
} catch(e) {
    console.error("Auth helper error", e);
}
