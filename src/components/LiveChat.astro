        <div class="reactions-bar">
            <button class="reaction-btn" data-type="heart">‚ù§Ô∏è</button>
            <button class="reaction-btn" data-type="fire">üî•</button>
            <button class="reaction-btn" data-type="clap">üëè</button>
            <button class="reaction-btn" data-type="100">üíØ</button>
        </div>
        
        <div id="reactions-container"></div>
        <div id="live-chat-toast" class="toast hidden"></div>
        <div id="live-chat-confirm" class="confirm-modal hidden">
