<style>
  .footer {
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding: 5rem 0 2rem;
    margin-top: auto;
    position: relative;
    overflow: hidden;
  }
  
  /* Glow effect */
  .footer::after {
    content: '';
    position: absolute;
    bottom: -50%;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 50%;
    background: radial-gradient(circle, var(--color-primary-glow) 0%, transparent 70%);
    opacity: 0.15;
    filter: blur(80px);
    pointer-events: none;
    z-index: 0;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 2fr;
    gap: 4rem;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  /* Column Styles */
  .footer-column h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-main);
    margin-bottom: 1.5rem;
  }

  /* Brand Column */
  .brand-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    color: var(--color-text-main);
  }

  .text-gradient {
    color: var(--color-primary);
  }

  .brand-desc {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 320px;
  }

  .location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 2rem;
  }
  
  .location-icon {
      opacity: 0.7;
  }

  .legal-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .legal-links a {
    color: var(--color-text-dim);
    font-size: 0.85rem;
    transition: color 0.2s;
  }

  .legal-links a:hover {
    color: var(--color-text-main);
  }

  /* Nav & Social Columns */
  .footer-nav {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-nav a {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-nav a:hover {
    color: var(--color-primary);
    transform: translateX(2px);
  }

  /* Contact Column */
  .contact-text {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .contact-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 0.75rem 1rem;
    background: #3b82f6; /* Visual match to blue button */
    color: white;
    font-weight: 600;
    border-radius: 8px;
    margin-bottom: 1rem;
    transition: background 0.2s;
    text-decoration: none;
  }

  .contact-btn:hover {
    background: #2563eb;
    transform: translateY(-1px);
  }

  .email-box {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-main);
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .email-box:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: var(--color-text-muted);
  }

  .click-hint {
    font-size: 0.75rem;
    color: var(--color-text-dim);
  }
  
  .copy-btn {
      position: absolute;
      inset: 0;
      opacity: 0;
      cursor: pointer;
      width: 100%;
  }

  /* Copyright */
  .copyright {
    position: relative;
    z-index: 1;
    border-top: 1px solid var(--color-border);
    padding-top: 2rem;
    text-align: center;
  }
  
  .copyright-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      color: var(--color-text-dim);
      font-size: 0.85rem;
  }

  .creator-link {
    color: var(--color-text-muted);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .creator-link:hover {
    color: var(--color-primary);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
    
    .brand-col, .contact-col {
        grid-column: span 2;
    }
    
    /* Order adjustment if needed to match mobile flow better */
    .brand-col { order: 1; }
    .links-col { order: 2; } /* Both nav columns */
    .contact-col { order: 3; }
  }

  @media (max-width: 640px) {
    .footer {
        padding-bottom: 7rem; /* Space for mobile nav */
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      text-align: left; /* Keep left alignment for clean look or center? Image implies left align mainly */
    }

    .brand-col, .contact-col {
        grid-column: span 1;
    }
    
    .brand-desc {
        max-width: 100%;
    }
  }
</style>
