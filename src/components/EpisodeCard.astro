---
import type { CollectionEntry } from 'astro:content';

interface Props {
	post: CollectionEntry<'episodios'>;
    disableTransition?: boolean;
}

const { post, disableTransition = false } = Astro.props;

// Format date
const formattedDate = post.data.pubDate.toLocaleDateString('es-ES', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});
---

<article class="episode-card glass-panel group">
	<div class="card-inner">
        {post.data.image ? (
            <div class="card-image-wrapper">
                <img 
                    src={post.data.image} 
                    alt={post.data.title} 
                    class="card-image" 
                    transition:name={!disableTransition ? `cover-${post.slug}` : undefined}
                />
                <div class="play-overlay">
                    <span class="play-icon">▶</span>
                </div>
            </div>
        ) : (
            <div class="card-image-placeholder">
                <span class="placeholder-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" x2="12" y1="19" y2="22"/><line x1="8" x2="16" y1="22" y2="22"/></svg>
                </span>
                 <div class="play-overlay">
                    <span class="play-icon">▶</span>
                </div>
            </div>
        )}
        
		<div class="card-content">
            <div class="meta">
                <span class="season-badge">Temporada {post.data.season || 1} • Ep. {post.data.episode || 1}</span>
                <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
            </div>

            {post.data.tags && (
                <div class="tags">
                    {post.data.tags.slice(0, 3).map((tag: string) => (
                        <a href={`/ep?tag=${tag}`} class="tag">#{tag}</a>
                    ))}
                </div>
            )}
            
			<h3 class="title group-hover:text-primary transition-colors">{post.data.title}</h3>
            
            {post.data.participants && post.data.participants.length > 0 && (
                <div class="participants">
                    <span class="participants-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                    </span>
                    <span class="participants-list">{post.data.participants.join(', ')}</span>
                </div>
            )}
            
            <p class="description">
                {post.data.description}
            </p>
            
            <div class="footer-meta">
                <span class="card-rating" data-rating-slug={post.slug}>
                    <span class="rating-stars-mini">★★★★★</span>
                </span>
                <span class="duration">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:inline; vertical-align:middle; margin-right:4px;"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    {post.data.duration || 'N/A'}
                </span>
                <span class="listen-text">Escuchar</span>
            </div>
		</div>
	</div>
    <a href={`/ep/${post.slug}`} class="full-card-link" aria-label={`Escuchar ${post.data.title}`}></a>
</article>

<style>
	.episode-card {
		border-radius: var(--radius-lg);
		transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
	}

    .episode-card:hover {
        transform: translateY(-8px);
        border-color: var(--color-primary);
        box-shadow: 0 20px 40px -10px rgba(0,0,0,0.5);
    }
    
    [data-theme="light"] .episode-card:hover {
         box-shadow: 0 20px 40px -10px rgba(0,0,0,0.15);
    }

	.card-inner {
		color: inherit;
        display: flex;
        flex-direction: column;
        height: 100%;
	}

    .full-card-link {
        position: absolute;
        inset: 0;
        z-index: 1;
    }

    .card-image-wrapper, .card-image-placeholder {
        width: 100%;
        height: 180px;
        position: relative;
        overflow: hidden;
    }

    .card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .episode-card:hover .card-image {
        transform: scale(1.05);
    }

    .card-image-placeholder {
        background: linear-gradient(135deg, var(--color-surface-hover), var(--color-surface));
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .placeholder-icon {
        font-size: 3rem;
        opacity: 0.5;
    }

    /* Play Overlay */
    .play-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        backdrop-filter: blur(2px);
    }

    .episode-card:hover .play-overlay {
        opacity: 1;
    }

    .play-icon {
        width: 50px;
        height: 50px;
        background: var(--color-primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        padding-left: 4px; /* Optical center adjustment */
        box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        transform: scale(0.8);
        transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .episode-card:hover .play-icon {
        transform: scale(1);
    }

    .card-content {
        padding: var(--spacing-lg);
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .meta {
        display: flex;
        justify-content: space-between;
        font-size: 0.75rem;
        color: var(--color-text-muted);
        margin-bottom: var(--spacing-sm);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600;
    }
    
    .season-badge {
        color: var(--color-secondary);
    }

    .tags {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 2;
        flex-wrap: wrap;
    }

    .tag {
        color: var(--color-primary);
        font-size: 0.75rem;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .tag:hover {
        color: var(--color-text-main);
        text-decoration: underline;
    }

	.title {
		font-size: 1.25rem;
		margin-bottom: var(--spacing-sm);
		line-height: 1.3;
        color: var(--color-text-main);
        font-weight: 700;
	}

    .participants {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        color: var(--color-text-dim);
        margin-bottom: var(--spacing-sm);
    }

    .participants-icon {
        opacity: 0.7;
    }

    .description {
        color: var(--color-text-muted);
        margin-bottom: var(--spacing-lg); /* Space before footer */
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        font-size: 0.95rem;
        line-height: 1.6;
        flex-grow: 1; /* Pushes footer down */
    }

    .footer-meta {
        margin-top: auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid rgba(255,255,255,0.05);
        padding-top: var(--spacing-md);
        font-size: 0.875rem;
        color: var(--color-text-dim);
    }
    
    [data-theme="light"] .footer-meta {
        border-top-color: rgba(0,0,0,0.05);
    }

    .listen-text {
        color: var(--color-primary);
        font-weight: 600;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.3s ease;
    }
    
    .episode-card:hover .listen-text {
        opacity: 1;
        transform: translateX(0);
    }

    /* Card Rating */
    .card-rating {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .rating-stars-mini {
        font-size: 0.75rem;
        letter-spacing: -1px;
        color: rgba(255, 255, 255, 0.15);
    }

    [data-theme="light"] .rating-stars-mini {
        color: rgba(0, 0, 0, 0.1);
    }

    .card-rating[data-loaded="true"] .rating-stars-mini {
        color: #f59e0b;
    }

    .card-rating .rating-value {
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--color-text-muted);
    }
</style>

<script>
    const loadCardRatings = async () => {
        const ratingElements = document.querySelectorAll('.card-rating[data-rating-slug]');
        
        ratingElements.forEach(async (el) => {
            const slug = el.getAttribute('data-rating-slug');
            if (!slug || el.getAttribute('data-loaded') === 'true') return;

            try {
                const res = await fetch(`/api/ratings/${slug}`);
                const json = await res.json();

                if (json.success && json.data.count > 0) {
                    const { average, count } = json.data;
                    const starsEl = el.querySelector('.rating-stars-mini');
                    
                    if (starsEl) {
                        // Generate stars based on rating
                        let starsHtml = '';
                        for (let i = 1; i <= 5; i++) {
                            starsHtml += i <= Math.round(average) ? '★' : '☆';
                        }
                        starsEl.textContent = starsHtml;
                        el.setAttribute('data-loaded', 'true');
                    }
                }
            } catch (e) {
                // Silent fail
            }
        });
    };

    // Run on load and page transitions
    document.addEventListener('DOMContentLoaded', loadCardRatings);
    document.addEventListener('astro:page-load', loadCardRatings);
</script>
