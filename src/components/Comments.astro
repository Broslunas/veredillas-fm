
---
import '../styles/global.css';

interface Props {
  slug: string;
}

const { slug } = Astro.props;
---

<div class="comments-layout">
  
  <!-- Sidebar: Sticky Form Area -->
  <aside class="comments-sidebar">
    <div class="sticky-content">
      <div class="sidebar-header">
        <h3 class="gradient-text">Conversaci√≥n</h3>
        <div class="live-indicator">
          <span class="pulse"></span>
          <span id="comment-count-label">0 comentarios</span>
        </div>
      </div>
      
      <p class="sidebar-desc">
        √önete al debate. Comparte tu opini√≥n sobre este episodio con la comunidad.
      </p>

      <form id="comment-form" class="modern-form">
        <div class="form-grid">
          <div class="input-wrapper">
             <input type="text" id="name" name="name" placeholder=" " required maxlength="60" />
             <label for="name">Nombre</label>
             <div class="focus-line"></div>
          </div>
          
          <div class="input-wrapper">
             <input type="email" id="email" name="email" placeholder=" " required />
             <label for="email">Email (privado)</label>
             <div class="focus-line"></div>
          </div>
        </div>

        <div class="input-wrapper full-width">
          <textarea id="text" name="text" rows="3" placeholder=" " required maxlength="1000"></textarea>
          <label for="text">Tu mensaje...</label>
          <div class="focus-line"></div>
        </div>

        <div class="form-footer">
          <button type="submit" class="submit-btn">
            <span>Publicar</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
          </button>
          <p id="form-status" class="status-msg"></p>
        </div>
      </form>
    </div>
  </aside>

  <!-- Main Feed: Scrollable Comments -->
  <div class="comments-feed" id="comments-container">
    <div id="comments-list" class="feed-list">
      <div class="loading-state">
        <div class="loader-line"></div>
        <p>Cargando comentarios...</p>
      </div>
    </div>
  </div>

  <!-- Toast Container -->
  <div id="toast-container" class="toast-container"></div>

</div>

<script define:vars={{ slug }}>
  const form = document.getElementById('comment-form');
  const list = document.getElementById('comments-list');
  const countLabel = document.getElementById('comment-count-label');
  const toastContainer = document.getElementById('toast-container');

  // --- TOAST SYSTEM ---
  function showToast(message, type = 'info') {
      const toast = document.createElement('div');
      toast.className = `toast toast-${type}`;
      
      const icon = type === 'success' ? '‚úÖ' : type === 'error' ? '‚ùå' : '‚ÑπÔ∏è';
      
      toast.innerHTML = `
          <div class="toast-content">
              <span class="toast-icon">${icon}</span>
              <p class="toast-message">${message}</p>
          </div>
      `;
      
      toastContainer.appendChild(toast);
      
      // Animate in
      requestAnimationFrame(() => {
          toast.style.opacity = '1';
          toast.style.transform = 'translateY(0)';
      });
      
      // Remove after 4s
      setTimeout(() => {
          toast.style.opacity = '0';
          toast.style.transform = 'translateY(10px)';
          setTimeout(() => toast.remove(), 300);
      }, 4000);
  }

  async function fetchComments() {
    try {
      const res = await fetch(`/api/comments/${slug}`);
      const json = await res.json();
      
      if (json.success) {
        renderComments(json.data);
      } else {
        showToast('Error cargando comentarios', 'error');
      }
    } catch (e) {
       // Silent fail on load or show toast if critical
    }
  }

  function renderComments(comments) {
    if (comments.length === 0) {
      list.innerHTML = `
        <div class="empty-feed">
          <div class="empty-icon">üí¨</div>
          <h4>A√∫n no hay comentarios</h4>
          <p>S√© la primera persona en compartir sus pensamientos.</p>
        </div>
      `;
      countLabel.innerText = '0 comentarios';
      return;
    }

    countLabel.innerText = `${comments.length} comentario${comments.length !== 1 ? 's' : ''}`;
    
    list.innerHTML = comments.map(c => `
      <article class="feed-item" id="comment-${c._id}">
        <div class="item-avatar">
            <img src="${c.avatar}" alt="${escapeHtml(c.name)}" loading="lazy" />
        </div>
        <div class="item-content">
            <header class="item-header">
                <span class="item-author">${escapeHtml(c.name)}</span>
                <div class="header-right">
                    <time class="item-date">${timeAgo(new Date(c.createdAt))}</time>
                    <button class="delete-btn" title="Eliminar este comentario" onclick="requestDelete('${c._id}')">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
                    </button>
                </div>
            </header>
            <div class="item-body">
                ${escapeHtml(c.text)}
            </div>
        </div>
      </article>
    `).join('');
  }

  // --- DELETE LOGIC ---
  window.requestDelete = async (commentId) => {
      // Direct action: verify via email is the safety mechanism
      const btn = document.querySelector(`#comment-${commentId} .delete-btn`);
      if(btn) btn.style.opacity = '0.5';

      try {
          // 1. Request Delete Token from Server
          const res = await fetch(`/api/comments/${slug}`, {
              method: 'DELETE',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ commentId })
          });
          const json = await res.json();
          
          if (json.success && json.deletionToken) {
              // 2. Trigger Email via n8n (Client-side)
              try {
                  const deleteLink = `${window.location.origin}/verify-delete?token=${json.deletionToken}`;
                  
                  await fetch('https://n8n.broslunas.com/webhook/veredillasfm-comments-delete', {
                      method: 'POST',
                      headers: { 'Content-Type': 'application/json' },
                      body: JSON.stringify({
                          name: json.comment.name,
                          email: json.comment.email,
                          text: json.comment.text,
                          slug: json.comment.slug,
                          deleteLink
                      })
                  });

                  showToast('Enlace de confirmaci√≥n enviado a tu correo.', 'info');
              } catch (webhookErr) {
                  console.error(webhookErr);
                  showToast('Error al enviar el correo de borrado.', 'error');
              }
          } else {
              showToast(json.error || 'Error al solicitar el borrado.', 'error');
          }
      } catch (e) {
          showToast('Error de conexi√≥n.', 'error');
      } finally {
          if(btn) btn.style.opacity = '1';
      }
  };

  function escapeHtml(text) {
    if (!text) return '';
    return text.replace(/[&<>"']/g, function(m) {
      return { '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;' }[m];
    });
  }

  function timeAgo(date) {
    const seconds = Math.floor((new Date() - date) / 1000);
    let interval = seconds / 31536000;
    if (interval > 1) return Math.floor(interval) + " a√±os";
    interval = seconds / 2592000;
    if (interval > 1) return Math.floor(interval) + " meses";
    interval = seconds / 86400;
    if (interval > 1) return Math.floor(interval) + " d√≠as";
    interval = seconds / 3600;
    if (interval > 1) return Math.floor(interval) + " h";
    interval = seconds / 60;
    if (interval > 1) return Math.floor(interval) + " min";
    return "ahora mismo";
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const data = {
      name: formData.get('name'),
      email: formData.get('email'),
      text: formData.get('text')
    };

    const btn = form.querySelector('button');
    if (btn) btn.disabled = true;
    
    const originalBtnText = btn.innerHTML;
    btn.innerHTML = '<span class="loader-dots">Enviando...</span>';

    try {
      // 1. Create Comment in DB (Server)
      const res = await fetch(`/api/comments/${slug}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      const json = await res.json();

      if (json.success && json.verificationToken) {
          // 2. Trigger Email via n8n (Client-side to bypass Cloudflare server blocks)
          try {
             const verificationLink = `${window.location.origin}/verify-comment?token=${json.verificationToken}`;
             
             await fetch('https://n8n.broslunas.com/webhook/veredillasfm-comments', {
                 method: 'POST',
                 headers: { 'Content-Type': 'application/json' },
                 body: JSON.stringify({
                     name: data.name,
                     email: data.email,
                     text: data.text,
                     slug,
                     verificationLink
                 })
             });
             
             form.reset();
             showToast('¬°Casi listo! Revisa tu email para verificar.', 'info');
          } catch (webhookErr) {
             console.error(webhookErr);
             showToast('Error al enviar el correo de verificaci√≥n.', 'error');
          }
      } else {
         showToast(json.error || 'Error al publicar', 'error');
      }
    } catch (e) {
       showToast('Error de conexi√≥n', 'error');
    } finally {
      btn.disabled = false;
      btn.innerHTML = originalBtnText;
    }
  });

  fetchComments();
</script>

<style is:global>
  /* Layout Configuration */
  .comments-layout {
      display: flex;
      flex-direction: column;
      gap: 4rem;
      margin-top: 6rem;
      padding-top: 3rem;
      border-top: 1px solid rgba(255,255,255,0.05);
      font-family: var(--font-body);
      max-width: 700px; /* Optimal reading width */
      margin-left: auto;
      margin-right: auto;
  }

  /* SIDEBAR (Now Top Form) */
  .comments-sidebar {
      position: relative;
      width: 100%;
  }
  
  .sticky-content {
      position: relative;
      top: 0;
  }

  .sidebar-header {
      margin-bottom: 1rem;
  }

  .gradient-text {
      background: linear-gradient(135deg, #fff 0%, #a5a5a5 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 2rem;
      font-weight: 800;
      font-family: var(--font-display);
      margin: 0;
      letter-spacing: -0.02em;
  }

  .live-indicator {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-top: 0.5rem;
      font-size: 0.85rem;
      color: var(--color-text-muted);
      font-weight: 500;
  }

  .pulse {
      width: 8px;
      height: 8px;
      background: #22c55e;
      border-radius: 50%;
      box-shadow: 0 0 0 rgba(34, 197, 94, 0.4);
      animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
      0% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); }
      70% { box-shadow: 0 0 0 6px rgba(34, 197, 94, 0); }
      100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0); }
  }

  .sidebar-desc {
      color: var(--color-text-dim);
      font-size: 0.95rem;
      line-height: 1.5;
      margin-bottom: 2rem;
      opacity: 0.8;
  }

  /* MODERN FORM STYLES */
  .modern-form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      padding: 0.5rem 0;
  }

  .form-grid {
      display: grid;
      gap: 1.5rem;
  }

  .input-wrapper {
      position: relative;
  }

  .input-wrapper input,
  .input-wrapper textarea {
      width: 100%;
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 8px;
      padding: 1.25rem 1rem 0.5rem; /* Space for floating label */
      color: #fff;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      font-family: inherit;
  }
  
  [data-theme="light"] .input-wrapper input,
  [data-theme="light"] .input-wrapper textarea {
      background: #fff;
      border-color: rgba(0,0,0,0.1);
      color: #000;
  }

  .input-wrapper label {
      position: absolute;
      left: 1rem;
      top: 1rem;
      color: var(--color-text-muted);
      font-size: 0.95rem;
      pointer-events: none;
      transition: all 0.3s ease;
  }

  /* Floating Label Logic */
  .input-wrapper input:focus ~ label,
  .input-wrapper input:not(:placeholder-shown) ~ label,
  .input-wrapper textarea:focus ~ label,
  .input-wrapper textarea:not(:placeholder-shown) ~ label {
      top: 0.25rem;
      font-size: 0.7rem;
      color: var(--color-primary);
      font-weight: 600;
      text-transform: uppercase;
  }
  
  .input-wrapper input:focus,
  .input-wrapper textarea:focus {
      border-color: var(--color-primary);
      background: rgba(139, 92, 246, 0.05);
      outline: none;
  }

  .submit-btn {
      background: #fff;
      color: #000;
      border: none;
      padding: 0.8rem 1.5rem;
      border-radius: 99px;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
      transition: transform 0.2s, background 0.2s;
      width: fit-content;
  }
  
  [data-theme="light"] .submit-btn {
      background: #000;
      color: #fff;
  }

  .submit-btn:hover {
      transform: scale(1.05);
      background: #f0f0f0;
  }

  /* FEED AREA (Right) */
  .feed-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
  }

  .feed-item {
      display: flex;
      gap: 1rem;
      animation: fadeIn 0.4s ease-out forwards;
  }

  @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
  }

  .item-avatar img {
      width: 44px;
      height: 44px;
      border-radius: 12px;
      object-fit: cover;
      background: #2a2a2a;
  }

  .item-content {
      flex: 1;
      background: rgba(255,255,255,0.03);
      padding: 1.25rem;
      border-radius: 0 16px 16px 16px; /* Chat bubble style */
      border: 1px solid rgba(255,255,255,0.05);
  }
  
  [data-theme="light"] .item-content {
      background: #f4f4f5;
      border-color: rgba(0,0,0,0.05);
  }

  .item-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 0.5rem;
      align-items: center; /* Better alignment */
  }
  
  .header-right {
      display: flex;
      align-items: center;
      gap: 0.75rem;
  }

  .delete-btn {
      background: transparent;
      border: none;
      padding: 4px;
      color: var(--color-text-muted);
      cursor: pointer;
      opacity: 0; 
      transition: all 0.2s;
      border-radius: 4px;
  }
  
  .feed-item:hover .delete-btn {
      opacity: 0.6;
  }
  
  .delete-btn:hover {
      opacity: 1 !important;
      color: #ef4444; /* Red */
      background: rgba(239, 68, 68, 0.1);
  }

  .item-author {
      font-weight: 700;
      color: var(--color-text-main);
      font-size: 0.95rem;
  }

  .item-date {
      font-size: 0.75rem;
      color: var(--color-text-muted);
  }

  .item-body {
      color: var(--color-text-dim);
      font-size: 0.95rem;
      line-height: 1.6;
      white-space: pre-wrap;
  }

  /* Empty State */
  .empty-feed {
      text-align: center;
      padding: 4rem 2rem;
      background: rgba(255,255,255,0.02);
      border-radius: 16px;
      border: 1px dashed rgba(255,255,255,0.1);
  }

  .empty-icon { font-size: 3rem; margin-bottom: 1rem; opacity: 0.5; }
  .empty-feed h4 { margin: 0 0 0.5rem; font-size: 1.1rem; }
  .empty-feed p { margin: 0; color: var(--color-text-muted); font-size: 0.9rem; }

  /* TOAST SYSTEM */
  .toast-container {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      z-index: 9999;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      pointer-events: none;
  }

  .toast {
      pointer-events: auto;
      background: rgba(15, 15, 20, 0.95);
      border: 1px solid rgba(255, 255, 255, 0.1);
      padding: 1rem 1.5rem;
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      min-width: 300px;
      opacity: 0;
      transform: translateY(10px);
      transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }
  
  [data-theme="light"] .toast {
      background: rgba(255, 255, 255, 0.95);
      border-color: rgba(0,0,0,0.1);
      box-shadow: 0 8px 32px rgba(0,0,0,0.1);
      color: #000;
  }

  .toast-content {
      display: flex;
      align-items: center;
      gap: 1rem;
  }

  .toast-icon {
      font-size: 1.25rem;
  }

  .toast-message {
      margin: 0;
      font-size: 0.95rem;
      font-weight: 500;
  }

  /* Variations */
  .toast-success { border-left: 4px solid #22c55e; }
  .toast-error { border-left: 4px solid #ef4444; }
  .toast-info { border-left: 4px solid var(--color-primary); }

  @media (max-width: 640px) {
      .toast-container {
          bottom: 1rem;
          right: 1rem;
          left: 1rem;
      }
      .toast {
          min-width: auto;
          width: 100%;
      }
  }
</style>
