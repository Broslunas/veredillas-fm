---
interface Props {
    onlyCurrentPath?: boolean;
}

const { onlyCurrentPath = false } = Astro.props;
---
<div id="listener-count-pill" class="listener-pill hidden" data-only-current-path={onlyCurrentPath.toString()}>
    <span class="live-dot"></span>
    <span class="count-text">
        <span id="listener-number">0</span>
        <span class="label-text"> escuchando ahora</span>
    </span>
</div>

<style>
    .listener-pill {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.35rem 0.8rem;
        background: rgba(10, 10, 11, 0.6);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 9999px;
        font-size: 0.825rem;
        font-weight: 500;
        color: var(--color-text-muted);
        transition: all 0.3s ease;
        opacity: 0;
        transform: translateY(-5px);
        cursor: default;
    }

    :global([data-theme="light"]) .listener-pill {
        background: rgba(255, 255, 255, 0.7);
        border-color: rgba(0, 0, 0, 0.05);
        color: var(--color-text-main);
    }

    .listener-pill.visible {
        opacity: 1;
        transform: translateY(0);
        display: flex; /* Ensure it's flex */
    }

    .listener-pill.hidden {
        display: none;
    }

    .live-dot {
        width: 8px;
        height: 8px;
        background-color: #ef4444; /* Red-500 */
        border-radius: 50%;
        position: relative;
        box-shadow: 0 0 8px rgba(239, 68, 68, 0.5);
    }

    .live-dot::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        background-color: inherit;
        border-radius: 50%;
        animation: pulse-ring 2s cubic-bezier(0.215, 0.61, 0.355, 1) infinite;
    }

    .count-text {
        white-space: nowrap;
        font-variant-numeric: tabular-nums;
    }

    #listener-number {
        font-weight: 700;
        color: var(--color-text-main);
        margin-right: 3px;
    }
    
    .label-text {
        opacity: 0.8;
    }
    
    /* Mobile optimization: hide label if too narrow, or just rely on responsive header */
    @media (max-width: 640px) {
        .label-text {
            display: none;
        }
        .count-text::after {
            content: ' oyentes';
        }
    }

    @keyframes pulse-ring {
        0% {
            transform: translate(-50%, -50%) scale(0.5);
            opacity: 1;
        }
        100% {
            transform: translate(-50%, -50%) scale(2.5);
            opacity: 0;
        }
    }
</style>

<script>
    const STORAGE_KEY = 'veredillas_session_id';
    
    // Generate UUID v4
    function uuidv4() {
        return "10000000-1000-4000-8000-100000000000".replace(/[018]/g, c =>
            // @ts-ignore
            (+c ^ crypto.getRandomValues(new Uint8Array(1))[0] & 15 >> (+c / 4)).toString(16)
        );
    }

    function getSessionId() {
        let sid = localStorage.getItem(STORAGE_KEY);
        if (!sid) {
            sid = uuidv4();
            localStorage.setItem(STORAGE_KEY, sid);
        }
        return sid;
    }

    const pill = document.getElementById('listener-count-pill');
    const numberEl = document.getElementById('listener-number');
    let isVisible = false;

    async function updateHeartbeat() {
        if (!pill) return;
        
        try {
            const sid = getSessionId();
            const onlyCurrentPath = pill.dataset.onlyCurrentPath === 'true';

            const res = await fetch('/api/listeners/heartbeat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                    sessionId: sid,
                    path: window.location.pathname,
                    onlyCurrentPath
                })
            });
            
            if (res.ok) {
                const data = await res.json();
                if (numberEl && typeof data.count === 'number') {
                    // Animate number change?
                    numberEl.textContent = data.count.toString();
                    
                    if (!isVisible && pill) {
                        pill.classList.remove('hidden');
                        // Small delay to allow display:flex to apply before opacity transition
                        requestAnimationFrame(() => {
                            pill.classList.add('visible');
                        });
                        isVisible = true;
                    }
                }
            }
        } catch (e) {
            console.error("Listener count error", e);
        }
    }

    // Initial call
    // Wait a moment so we don't block critical resource loading
    if (pill) {
        setTimeout(() => {
            updateHeartbeat();
            // Poll every 45 seconds
            setInterval(updateHeartbeat, 45000);
        }, 1000);
    }

</script>
