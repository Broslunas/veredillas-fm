---
interface Props {
  title: string;
  image?: string;
  guests?: string[];
  url?: URL | string;
  triggerId?: string;
}

const { title, image = '/logo.png', guests = [], url = Astro.url, triggerId } = Astro.props;
---

<!-- Trigger Button (Only if no external trigger ID provided) -->
{!triggerId && (
<button class="share-btn generator-btn" id="open-generator-btn" aria-label="Crear Story">
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
    <circle cx="8.5" cy="8.5" r="1.5"></circle>
    <polyline points="21 15 16 10 5 21"></polyline>
  </svg>
</button>
)}

<!-- Generator Modal -->
<div id="generator-modal" class="generator-backdrop" data-trigger-id={triggerId}>
    <div class="generator-dialog">
        <div class="generator-header">
            <h3>Diseñador de Stories</h3>
            <button class="close-btn" id="close-generator-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
            </button>
        </div>

        <div class="generator-content">
            <!-- Controls Sidebar -->
            <div class="controls-panel custom-scrollbar">
                
                <!-- Section: Content -->
                <div class="control-section">
                    <h4 class="section-title">Contenido</h4>
                    <div class="input-group">
                        <label for="card-title">Título</label>
                        <textarea id="card-title" rows="2">{title}</textarea>
                    </div>
                    
                    <div class="input-group">
                        <label for="card-guest">Invitado</label>
                        <input type="text" id="card-guest" value={guests.join(', ') || ''} placeholder="Nombre del invitado" />
                    </div>
                    
                    <div class="input-group">
                        <label for="card-quote">Frase Destacada</label>
                        <textarea id="card-quote" rows="3" placeholder="Una frase inspiradora del episodio..."></textarea>
                    </div>
                </div>

                <!-- Section: Background -->
                <div class="control-section">
                    <h4 class="section-title">Fondo</h4>
                    <div class="bg-picker">
                        <div class="bg-preset active" data-bg="cover" title="Portada Borrosa">
                            <span class="preview-dot" style="background: gray;"></span>
                        </div>
                        <div class="bg-preset" data-bg="gradient-1" title="Neon">
                            <span class="preview-dot" style="background: linear-gradient(135deg, #FF0080 0%, #7928CA 100%);"></span>
                        </div>
                        <div class="bg-preset" data-bg="gradient-2" title="Fresh">
                            <span class="preview-dot" style="background: linear-gradient(135deg, #0cebeb 0%, #20e3b2 50%, #29ffc6 100%);"></span>
                        </div>
                        <div class="bg-preset" data-bg="gradient-3" title="Dark">
                            <span class="preview-dot" style="background: linear-gradient(0deg, #0f172a 0%, #334155 100%);"></span>
                        </div>
                         <div class="bg-preset" data-bg="solid" title="Color Sólido">
                            <span class="preview-dot" style="background: #111;"></span>
                        </div>
                    </div>
                    


                    <div id="solid-color-picker" class="input-group hidden" style="margin-top: 10px;">
                        <label for="bg-color">Color de Fondo</label>
                        <div class="color-input-wrapper">
                            <input type="color" id="bg-color" value="#000000" />
                            <span class="color-value">#000000</span>
                        </div>
                    </div>
                </div>

                <!-- Section: Appearance -->
                <div class="control-section">
                    <h4 class="section-title">Apariencia</h4>
                    
                    <!-- Cover Image Settings -->
                    <div class="setting-row">
                        <label>Mostrar Portada</label>
                        <label class="switch">
                            <input type="checkbox" id="show-cover" checked>
                            <span class="slider round"></span>
                        </label>
                    </div>
                    <div id="cover-settings">
                        <div class="range-group">
                            <label>Tamaño Portada</label>
                            <input type="range" id="img-scale" min="50" max="150" value="100" />
                        </div>
                        <div class="range-group">
                            <label>Redondeo</label>
                            <input type="range" id="img-radius" min="0" max="100" value="40" />
                        </div>
                    </div>

                    <!-- Typography -->
                    <div class="setting-divider"></div>
                    
                    <div class="range-group">
                        <label>Tamaño Título</label>
                        <input type="range" id="title-size" min="30" max="100" value="64" />
                    </div>
                    
                    <div class="input-group">
                         <label>Color de Acento</label>
                         <div class="color-options">
                             <button class="color-btn active" data-color="#8b5cf6" style="background: #8b5cf6;"></button>
                             <button class="color-btn" data-color="#E1306C" style="background: #E1306C;"></button>
                             <button class="color-btn" data-color="#22c55e" style="background: #22c55e;"></button>
                             <button class="color-btn" data-color="#fbbf24" style="background: #fbbf24;"></button>
                             <button class="color-btn" data-color="#ffffff" style="background: #ffffff;"></button>
                         </div>
                    </div>

                </div>

                 <!-- Section: Layout Elements -->
                 <div class="control-section">
                    <h4 class="section-title">Elementos</h4>
                    <div class="toggles-grid">
                        <div class="toggle-item">
                            <label for="show-logo">Logo</label>
                            <input type="checkbox" id="show-logo" checked />
                        </div>
                        <div class="toggle-item">
                            <label for="show-tag">Etiqueta "Nuevo"</label>
                            <input type="checkbox" id="show-tag" checked />
                        </div>
                        <div class="toggle-item">
                            <label for="show-website">Sitio Web</label>
                            <input type="checkbox" id="show-website" checked />
                        </div>
                        <div class="toggle-item">
                            <label for="show-wave">Onda de Audio</label>
                            <input type="checkbox" id="show-wave" checked />
                        </div>
                    </div>
                 </div>

                <div class="actions">
                    <button id="download-card-btn" class="primary-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
                        <span class="btn-text">Descargar Story</span>
                    </button>
                </div>
            </div>

            <!-- Preview Area -->
            <div class="preview-panel">
                <div class="canvas-container">
                    <div id="share-card" class="share-card">
                        <!-- Background -->
                        <div class="card-bg" id="card-bg-layer">
                             <img src={image} alt="Background" class="bg-image blurred" />
                             <div class="bg-overlay"></div>
                             <div class="bg-solid" style="display: none;"></div>
                        </div>
                        
                        <!-- Audio Wave Decoration -->
                        <div class="audio-wave-decoration" id="wave-decoration">
                            <span></span><span></span><span></span><span></span><span></span>
                            <span></span><span></span><span></span><span></span><span></span>
                        </div>

                        <!-- Content -->
                        <div class="card-content">
                            <!-- Top Bar -->
                            <div class="card-top-bar">
                                <div class="brand-badge" id="el-logo">
                                    <img src="/logo.png" alt="Logo" class="brand-logo" />
                                    <span class="brand-name">VEREDILLAS FM</span>
                                </div>
                                <div class="episode-pill" id="el-tag">NUEVO EPISODIO</div>
                            </div>

                            <!-- Visual -->
                            <div class="main-visual" id="visual-container">
                                 <div class="cover-wrapper">
                                     <img src={image} alt="Cover" class="cover-image" id="card-cover-img" />
                                 </div>
                            </div>

                            <!-- Text -->
                            <div class="text-content">
                                <h1 class="card-title-text" id="preview-title">{title}</h1>
                                
                                <div class="card-guest-text" id="preview-guest" style={guests.length === 0 ? 'display:none' : ''}>
                                    <span class="guest-label accent-text">FT.</span>
                                    <span class="guest-name accent-text">{guests.join(', ')}</span>
                                </div>
                                
                                <div class="card-quote-container" id="preview-quote-container" style="display:none">
                                    <p class="card-quote-text" id="preview-quote"></p>
                                </div>
                            </div>
                            
                             <!-- Footer -->
                             <div class="card-footer" id="el-website">
                                <div class="website-pill">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
                                    <span class="website-text">veredillasfm.es</span>
                                </div>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    import { toPng } from 'html-to-image';

    const modal = document.getElementById('generator-modal');
    const openBtn = document.getElementById('open-generator-btn');
    const closeBtn = document.getElementById('close-generator-btn');
    
    // Inputs
    const titleInput = document.getElementById('card-title') as HTMLTextAreaElement;
    const guestInput = document.getElementById('card-guest') as HTMLInputElement;
    const quoteInput = document.getElementById('card-quote') as HTMLTextAreaElement;
    
    // Groups
    const coverSettings = document.getElementById('cover-settings');
    const solidColorPicker = document.getElementById('solid-color-picker');

    // Controls
    const showCoverInput = document.getElementById('show-cover') as HTMLInputElement;
    const imgScaleInput = document.getElementById('img-scale') as HTMLInputElement;
    const imgRadiusInput = document.getElementById('img-radius') as HTMLInputElement;
    const titleSizeInput = document.getElementById('title-size') as HTMLInputElement;
    const bgColorInput = document.getElementById('bg-color') as HTMLInputElement;

    // Toggles
    const showLogoInput = document.getElementById('show-logo') as HTMLInputElement;
    const showTagInput = document.getElementById('show-tag') as HTMLInputElement;
    const showWebsiteInput = document.getElementById('show-website') as HTMLInputElement;
    const showWaveInput = document.getElementById('show-wave') as HTMLInputElement;

    // Preview Elements
    const previewTitle = document.getElementById('preview-title');
    const previewGuest = document.getElementById('preview-guest');
    const previewGuestName = previewGuest?.querySelector('.guest-name');
    const previewQuoteContainer = document.getElementById('preview-quote-container');
    const previewQuote = document.getElementById('preview-quote');
    const cardBgLayer = document.getElementById('card-bg-layer');
    const visualContainer = document.getElementById('visual-container');
    const cardCoverImg = document.getElementById('card-cover-img');
    const elLogo = document.getElementById('el-logo');
    const elTag = document.getElementById('el-tag');
    const elWebsite = document.getElementById('el-website');
    const elWave = document.getElementById('wave-decoration');
    
    // Background Buttons
    const bgPresets = document.querySelectorAll('.bg-preset');
    const colorBtns = document.querySelectorAll('.color-btn');

    // --- State Management ---

    const toggleModal = (show: boolean) => {
        if (show) {
            modal?.classList.add('visible');
            setTimeout(fitPreview, 50);
        } else {
            modal?.classList.remove('visible');
        }
    };

    const fitPreview = () => {
        const panel = document.querySelector('.preview-panel');
        const container = document.querySelector('.canvas-container') as HTMLElement;
        if (!panel || !container) return;

        const margin = 40;
        const scale = Math.min(
            (panel.clientWidth - margin) / 1080,
            (panel.clientHeight - margin) / 1920
        );
        container.style.transform = `scale(${Math.min(scale, 0.8)})`;
    };

    window.addEventListener('resize', fitPreview);

    // --- Global Access ---
    window.openStoryGenerator = (data) => {
        if (titleInput && data.title !== undefined) titleInput.value = data.title;
        
        if (guestInput && data.guests !== undefined) {
             guestInput.value = Array.isArray(data.guests) ? data.guests.join(', ') : data.guests;
        }
        
        if (quoteInput && data.quote !== undefined) quoteInput.value = data.quote;
        
        if (data.image) {
             const bgImg = cardBgLayer?.querySelector('.bg-image') as HTMLImageElement;
             if (bgImg) bgImg.src = data.image; // No crossorigin needed for display
             if (cardCoverImg) (cardCoverImg as HTMLImageElement).src = data.image;
        }
        
        updatePreview();
        toggleModal(true);
    };
    
    // Image Error Handling
    document.querySelectorAll('.share-card img').forEach(img => {
        img.addEventListener('error', function() {
            if ((this as HTMLImageElement).src !== '/logo.png') {
                (this as HTMLImageElement).src = '/logo.png';
            }
        });
    });

    // External Trigger
    const triggerId = modal?.dataset.triggerId;
    if (triggerId) {
        const extBtn = document.getElementById(triggerId);
        extBtn?.addEventListener('click', () => toggleModal(true));
    }

    openBtn?.addEventListener('click', () => toggleModal(true));
    closeBtn?.addEventListener('click', () => toggleModal(false));
    modal?.addEventListener('click', (e) => {
        if (e.target === modal) toggleModal(false);
    });

    // --- Updates ---

    const updatePreview = () => {
        // Text Content
        if (previewTitle) previewTitle.textContent = titleInput?.value || '';
        
        if (previewGuest && previewGuestName && guestInput) {
            const val = guestInput.value.trim();
            if (val) {
                previewGuestName.textContent = val;
                previewGuest.style.display = 'flex';
            } else {
                previewGuest.style.display = 'none';
            }
        }
        
        if (previewQuote && previewQuoteContainer && quoteInput) {
            const val = quoteInput.value.trim();
            if (val) {
                previewQuote.textContent = `“${val}”`;
                previewQuoteContainer.style.display = 'flex';
            } else {
                previewQuoteContainer.style.display = 'none';
            }
        }

        // Appearance
        if (visualContainer && showCoverInput) {
             visualContainer.style.display = showCoverInput.checked ? 'flex' : 'none';
             if (coverSettings) coverSettings.classList.toggle('disabled', !showCoverInput.checked);
        }

        if (cardCoverImg) {
            if (imgScaleInput) {
                cardCoverImg.style.transform = `scale(${parseInt(imgScaleInput.value) / 100})`;
            }
            if (imgRadiusInput) {
                cardCoverImg.style.borderRadius = `${imgRadiusInput.value}px`;
            }
        }

        if (previewTitle && titleSizeInput) {
            previewTitle.style.fontSize = `${titleSizeInput.value}px`;
        }
        
        // Visibility
        if (elLogo && showLogoInput) elLogo.style.opacity = showLogoInput.checked ? '1' : '0';
        if (elTag && showTagInput) elTag.style.opacity = showTagInput.checked ? '1' : '0';
        if (elWebsite && showWebsiteInput) elWebsite.style.opacity = showWebsiteInput.checked ? '1' : '0';
        if (elWave && showWaveInput) elWave.style.opacity = showWaveInput.checked ? '1' : '0';

        // Custom BG Color
        if (bgColorInput && solidColorPicker && !solidColorPicker.classList.contains('hidden')) {
            const solidLayer = cardBgLayer?.querySelector('.bg-solid') as HTMLElement;
            if (solidLayer) {
                solidLayer.style.backgroundColor = bgColorInput.value;
            }
            const valDisplay = solidColorPicker.querySelector('.color-value');
            if (valDisplay) valDisplay.textContent = bgColorInput.value;
        }
    };

    // Listeners
    [titleInput, guestInput, quoteInput, imgScaleInput, imgRadiusInput, titleSizeInput, bgColorInput]
        .forEach(el => el?.addEventListener('input', updatePreview));
    
    [showCoverInput, showLogoInput, showTagInput, showWebsiteInput, showWaveInput]
        .forEach(el => el?.addEventListener('change', updatePreview));

    // Background Presets
    bgPresets.forEach(btn => {
        btn.addEventListener('click', () => {
            bgPresets.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            
            const bgType = btn.getAttribute('data-bg');
            // Reset
            if (cardBgLayer) {
                cardBgLayer.className = 'card-bg';
                const bgImg = cardBgLayer.querySelector('.bg-image') as HTMLElement;
                const bgSolid = cardBgLayer.querySelector('.bg-solid') as HTMLElement;
                
                if (bgImg) bgImg.style.display = 'block';
                if (bgSolid) bgSolid.style.display = 'none';
                if (solidColorPicker) solidColorPicker.classList.add('hidden');

                if (bgType === 'cover') {
                    // Default
                } else if (bgType === 'solid') {
                    if (bgImg) bgImg.style.display = 'none';
                    if (bgSolid) bgSolid.style.display = 'block';
                    if (solidColorPicker) solidColorPicker.classList.remove('hidden');
                    updatePreview(); // Apply current color
                } else {
                    cardBgLayer.classList.add(bgType || '');
                     if (bgImg) bgImg.style.display = 'none';
                }
            }
        });
    });



    // Accent Color
    colorBtns.forEach(btn => {
        btn.addEventListener('click', () => {
             colorBtns.forEach(b => b.classList.remove('active'));
             btn.classList.add('active');
             const color = btn.getAttribute('data-color');
             
             // Update CSS variables or specific elements
             document.documentElement.style.setProperty('--card-accent', color || '#8b5cf6');
             
             const accentEls = document.querySelectorAll('.accent-text');
             accentEls.forEach((el) => (el as HTMLElement).style.color = color || '#8b5cf6');
             
             // Also update wave
             const waveBars = document.querySelectorAll('.audio-wave-decoration span');
             waveBars.forEach((el) => (el as HTMLElement).style.background = color || '#8b5cf6');
        });
    });

    // Download
    const downloadBtn = document.getElementById('download-card-btn');
    downloadBtn?.addEventListener('click', async () => {
        const card = document.getElementById('share-card');
        if (!card) return;

        const originalHTML = downloadBtn.innerHTML;
        downloadBtn.innerHTML = '<span class="loading-spinner"></span> Generando...';
        (downloadBtn as HTMLButtonElement).disabled = true;

        try {
            await new Promise(resolve => setTimeout(resolve, 100)); // Render wait
            
            const dataUrl = await toPng(card, {
                quality: 0.95,
                width: 1080,
                height: 1920,
                cacheBust: true,
                skipAutoScale: true,
                style: { transform: 'none' }
            });

            const link = document.createElement('a');
            link.download = `story-${Date.now()}.png`;
            link.href = dataUrl;
            link.click();
        } catch (err) {
            console.error(err);
            alert('Error al generar la imagen.');
        } finally {
            downloadBtn.innerHTML = originalHTML;
            (downloadBtn as HTMLButtonElement).disabled = false;
        }
    });

</script>

<style>
  :root {
      --card-accent: #8b5cf6;
  }

  /* --- UI Components --- */
  
  .hidden { display: none !important; }
  
  .custom-scrollbar::-webkit-scrollbar {
      width: 6px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
      background: rgba(0,0,0,0.1);
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
      background: #3f3f46;
      border-radius: 3px;
  }

  .generator-btn {
      color: white; 
      background: #27272a;
      border: 1px solid #3f3f46;
      padding: 0.5rem;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.2s;
  }
  
  .generator-btn:hover {
      background: #E1306C !important;
      border-color: #E1306C !important;
  }

