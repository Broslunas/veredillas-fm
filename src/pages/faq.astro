<script>
    import { gsap } from "gsap";

    document.addEventListener('astro:page-load', () => {
        gsap.from(".gs-fade-up", {
            y: 30,
            opacity: 0,
            duration: 0.8,
            stagger: 0.15,
            ease: "power2.out"
        });

        // Close other details when opening one (Exclusive accordion)
        const details = document.querySelectorAll("details");
