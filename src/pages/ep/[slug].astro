---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Comments from '../../components/Comments.astro';
import SocialShare from '../../components/SocialShare.astro';

export async function getStaticPaths() {
  const episodes = await getCollection('episodios');
  return episodes.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formattedDate = entry.data.pubDate.toLocaleDateString('es-ES', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});
---

<Layout 
  title={entry.data.title} 
  description={entry.data.description}
  image={entry.data.image || "/logo.png"}
  imageAlt={entry.data.title}
  type="article"
  publishedTime={entry.data.pubDate.toISOString()}
  author={entry.data.author}
  tags={[`Temporada ${entry.data.season}`, `Episodio ${entry.data.episode}`, 'podcast', 'audio']}
>
    <article class="episode-article">
        <!-- Header -->
        <header class="article-header container">
            <div class="meta-row">
                <span class="date">{formattedDate}</span>
                <span class="dot">•</span>
                <span class="author">{entry.data.author}</span>
            </div>
            
            <h1>{entry.data.title}</h1>
            <p class="lead">{entry.data.description}</p>
        </header>

        {entry.data.image && (
            <div class="featured-image container">
                <img src={entry.data.image} alt={entry.data.title} class="hero-image" />
            </div>
        )}

        <!-- Player -->
        <div class="player-container container">
            {entry.data.spotifyUrl && (
                <div id="episode-player-placeholder" data-spotify-url={entry.data.spotifyUrl}></div>
            )}
        </div>

        <!-- Content -->
        <div class="content-container container">
            <div class="content-body">
                <Content />
            </div>
            
            <div class="sidebar">
                <div class="sidebar-widget">
                    <h3>Detalles</h3>
                    <ul class="details-list">
                        <li>
                            <strong>Temporada:</strong> {entry.data.season}
                        </li>
                        <li>
                            <strong>Episodio:</strong> {entry.data.episode}
                        </li>
                        <li>
                            <strong>Duración:</strong> {entry.data.duration}
                        </li>
                    </ul>
                </div>
            </div>
        </div>


        <!-- Social Share -->
        <SocialShare title={entry.data.title} />

        <!-- Comments Section -->
        <div class="container" style="max-width: 1000px; margin-bottom: 6rem;">
            <Comments slug={entry.slug} />
        </div>
    </article>
</Layout>

<script>
    document.addEventListener('astro:page-load', () => {
        const btns = document.querySelectorAll('.play-trigger-btn');
        btns.forEach(btn => {
            btn.addEventListener('click', (e) => {
                const target = e.currentTarget as HTMLElement;
                const url = target.getAttribute('data-spotify-url');
                if(url) {
                    document.dispatchEvent(new CustomEvent('play-episode', { detail: { url } }));
                }
            });
        });
    });
</script>

<style>
    .article-header {
        padding: var(--spacing-md) var(--spacing-md) var(--spacing-lg);
        text-align: center;
        max-width: 900px;
        margin: 0 auto; /* Center horizontally */
    }

    .meta-row {
        color: var(--color-text-muted);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: var(--spacing-md);
    }

    .dot { margin: 0 var(--spacing-sm); }

    h1 {
        font-size: clamp(2rem, 4vw, 3.5rem);
        margin-bottom: var(--spacing-md);
        line-height: 1.1;
    }

    .lead {
        font-size: 1.25rem;
        color: var(--color-text-muted);
        line-height: 1.6;
    }

    .featured-image {
        margin-bottom: var(--spacing-xl);
        border-radius: var(--radius-lg);
        overflow: hidden;
        max-width: 1000px;
    }

    .hero-image {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: cover;
        border-radius: var(--radius-lg);
        border: 1px solid var(--color-border);
    }

    .player-container {
        max-width: 800px;
        margin-bottom: var(--spacing-2xl);
        position: relative; /* Context for absolute potentially, but we use body-relative usually */
    }

    #episode-player-placeholder {
        width: 100%;
        height: 160px; /* Standard height for expanded Spotify embed */
        border-radius: 12px;
        background: rgba(255,255,255,0.05); /* Visual placeholder */
    }

    .content-container {
        display: grid;
        grid-template-columns: 1fr 300px;
        gap: var(--spacing-2xl);
        max-width: 1000px;
        padding-bottom: var(--spacing-2xl);
    }

    .content-body {
        font-size: 1.125rem;
        color: var(--color-text-main);
    }

    /* Markdown Styles */
    .content-body :global(h2) {
        font-size: 1.75rem;
        margin-top: var(--spacing-xl);
        margin-bottom: var(--spacing-md);
        color: var(--color-text-main);
    }

    .content-body :global(p) {
        margin-bottom: var(--spacing-md);
        line-height: 1.7;
    }

    .content-body :global(ul), .content-body :global(ol) {
        margin-bottom: var(--spacing-md);
        padding-left: var(--spacing-lg);
    }
    
    .content-body :global(li) {
        margin-bottom: var(--spacing-sm);
    }

    /* Sidebar */
    .sidebar-widget {
        background: var(--color-surface);
        padding: var(--spacing-lg);
        border-radius: var(--radius-lg);
        border: 1px solid var(--color-border);
    }

    .sidebar-widget h3 {
        margin-bottom: var(--spacing-md);
        font-size: 1.25rem;
    }

    .details-list {
        list-style: none;
    }

    .details-list li {
        display: flex;
        justify-content: space-between;
        padding: var(--spacing-sm) 0;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .details-list li:last-child {
        border-bottom: none;
    }
    
    .details-list strong {
        color: var(--color-text-muted);
    }

    @media (max-width: 768px) {
        .content-container {
            grid-template-columns: 1fr;
        }
        
        .sidebar {
            order: -1; 
            margin-bottom: var(--spacing-lg);
        }
    }
</style>
