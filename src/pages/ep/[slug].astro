---
import { getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Comments from '../../components/Comments.astro';
import SocialShare from '../../components/SocialShare.astro';
import RelatedEpisodes from '../../components/RelatedEpisodes.astro';
import EpisodeParticipants from '../../components/EpisodeParticipants.astro';
import TranscriptionWidget from '../../components/TranscriptionWidget.astro';
import EpisodeSections from '../../components/EpisodeSections.astro';
import EpisodeClips from '../../components/EpisodeClips.astro';
import SidebarWidget from '../../components/SidebarWidget.astro';
import FavoriteButton from '../../components/FavoriteButton.astro';
import EpisodeRating from '../../components/EpisodeRating.astro';

import PremiereCountdown from '../../components/PremiereCountdown.astro';
import LiveChat from '../../components/LiveChat.astro';
import ListenerCount from '../../components/ListenerCount.astro';
import EpisodeActions from '../../components/EpisodeActions.astro';

export const prerender = false;

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/404');
}

const entry = await getEntry('episodios', slug);

if (!entry) {
  return Astro.redirect('/404');
}
const { Content } = await entry.render();

const formattedDate = entry.data.pubDate.toLocaleDateString('es-ES', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});

const isPremiere = entry.data.isPremiere ?? false;
const isUpcoming = isPremiere && (new Date() < entry.data.pubDate);

// Calculate if premiere ended
let hasPremiereEnded = false;
if (isPremiere && entry.data.duration) {
    const durationStr = entry.data.duration;
    let durationMs = 0;
    
    if (durationStr.toLowerCase().includes('min')) {
        durationMs = parseInt(durationStr) * 60 * 1000;
    } else if (durationStr.includes(':')) {
        const parts = durationStr.split(':').map(Number);
        if (parts.length === 2) durationMs = (parts[0] * 60 + parts[1]) * 1000;
        else if (parts.length === 3) durationMs = (parts[0] * 3600 + parts[1] * 60 + parts[2]) * 1000;
    }
    
    const premiereEndTime = new Date(entry.data.pubDate.getTime() + durationMs);
    hasPremiereEnded = new Date() > premiereEndTime;
}


// Playback History for resuming
import { verifyToken } from '../../lib/auth';
import User from '../../models/User';
import mongoose from 'mongoose';

let savedProgress = 0;
const cookieHeader = Astro.request.headers.get('cookie'); // or Astro.cookies.get('auth-token')

// Safely attempt to read progress if logged in
let listenedEpisodes: string[] = [];
let favoriteEpisodes: string[] = [];

try {
    const token = Astro.cookies.get('auth-token')?.value;
    if (token) {
        const userPayload = verifyToken(token);
        if (userPayload) {
             if (mongoose.connection.readyState !== 1) {
                const MONGODB_URI = import.meta.env.MONGODB_URI;
                if (MONGODB_URI) await mongoose.connect(MONGODB_URI);
            }
            
            const user = await User.findById(userPayload.userId);
            if (user) {
                if (user.playbackHistory) {
                    const historyItem = user.playbackHistory.find((h: any) => h.episodeSlug === slug);
                    if (historyItem && !historyItem.completed) {
                       savedProgress = historyItem.progress || 0;
                    }
                    listenedEpisodes = user.playbackHistory.map((h: any) => h.episodeSlug);
                }
                
                if (user.favorites) {
                    favoriteEpisodes = user.favorites;
                }
            }
        }
    }
} catch (e) {
    console.warn("Failed to fetch playback history for episode", e);
}

---

<Layout 
  title={entry.data.title} 
  description={entry.data.description}
  image={`/og/${slug}.png`}
  imageAlt={entry.data.title}
  type="article"
  publishedTime={entry.data.pubDate.toISOString()}
  author={entry.data.author}
  tags={[`Temporada ${entry.data.season}`, `Episodio ${entry.data.episode}`, 'podcast', 'audio']}
>
    <article class="episode-article">
        <!-- Header -->
        <header class="article-header container">
            <div class="meta-row">
                <span class="date">{formattedDate}</span>
                <span class="dot">•</span>
                <span class="author">{entry.data.author}</span>
            </div>
            
            <h1>{entry.data.title}</h1>
            <p class="lead">{entry.data.description}</p>
            
            <div class="header-actions">
                <ListenerCount onlyCurrentPath={true} />
                <EpisodeRating slug={entry.slug} />
                <FavoriteButton episodeSlug={entry.slug} />
            </div>

        </header>

        {entry.data.image && (
            <div class="featured-image container">
                <img 
                    src={entry.data.image} 
                    alt={entry.data.title} 
                    class="hero-image" 
                    transition:name={`cover-${entry.slug}`}
                />
            </div>
        )}

        {entry.data.warningMessage && (
            <div class="container warning-wrapper">
                <div class="warning-alert">
                   <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="warning-icon"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><line x1="12" x2="12" y1="9" y2="13"/><line x1="12" x2="12.01" y1="17" y2="17"/></svg>
                   <span>{entry.data.warningMessage}</span>
                </div>
            </div>
        )}

        <!-- Premiere / Player Section -->
        <div class={isPremiere && !hasPremiereEnded ? "premiere-layout container" : "player-container container"}>
            
            <div class="player-area">
                {isUpcoming && (
                    <div id="premiere-countdown-wrapper">
                        <PremiereCountdown targetDate={entry.data.pubDate} title={entry.data.title} />
                    </div>
                )}
                
                <div id="premiere-player-wrapper" class:list={{"hidden": isUpcoming}} style={isUpcoming ? "display:none; opacity: 0; transition: opacity 1s ease-in;" : ""}>
                    {entry.data.spotifyUrl ? (
                        <div 
                            id="episode-player-placeholder" 
                            data-spotify-url={entry.data.spotifyUrl}
                            data-title={entry.data.title}
                            data-image={entry.data.image}
                            data-author={entry.data.author}
                            data-slug={entry.slug}
                            data-is-premiere={isPremiere}
                            data-premiere-date={isPremiere ? entry.data.pubDate.toISOString() : undefined}
                            data-video-url={entry.data.videoUrl}
                        ></div>
                    ) : entry.data.audioUrl ? (
                        <div 
                            id="episode-player-placeholder" 
                            data-audio-url={entry.data.audioUrl}
                            data-title={entry.data.title}
                            data-image={entry.data.image}
                            data-author={entry.data.author}
                            data-slug={entry.slug}
                            data-is-premiere={isPremiere}
                            data-premiere-date={isPremiere ? entry.data.pubDate.toISOString() : undefined}
                            data-start-time={savedProgress > 10 ? savedProgress : 0} 
                            data-transcription={entry.data.transcription ? JSON.stringify(entry.data.transcription) : null}
                            data-video-url={entry.data.videoUrl}
                        ></div>
                    ) : null}
                </div>

                <EpisodeActions 
                    title={entry.data.title} 
                    audioUrl={entry.data.audioUrl} 
                    image={entry.data.image} 
                    slug={entry.slug} 
                    guests={entry.data.participants}
                    duration={entry.data.duration}
                />
            </div>

            {isPremiere && !hasPremiereEnded && (
                <div class="chat-sidebar">
                    <LiveChat slug={entry.slug} />
                </div>
            )}
        </div>

        <!-- Content -->
        <div class="content-container container">
            <div class="content-body">
                <Content />
            </div>
            
            <div class="sidebar">
                <SidebarWidget title="Detalles" isOpen={false}>
                    <ul class="details-list">
                        <li>
                            <strong>Temporada:</strong> {entry.data.season}
                        </li>
                        <li>
                            <strong>Episodio:</strong> {entry.data.episode}
                        </li>
                        <li>
                            <strong>Duración:</strong> {entry.data.duration}
                        </li>
                        {entry.data.tags && (
                            <li class="tags-row">
                                <strong>Etiquetas:</strong> 
                                <div class="tags-list">
                                    {entry.data.tags.map(tag => (
                                        <a href={`/ep?tag=${tag}`} class="tag-link">#{tag}</a>
                                    ))}
                                </div>
                            </li>
                        )}
                    </ul>
                </SidebarWidget>
                
                <EpisodeParticipants participants={entry.data.participants} />
                
                <EpisodeClips clips={entry.data.clips} />

                <div id="live-content-widgets" style={isUpcoming ? "display:none; opacity: 0; transition: opacity 1s ease-in;" : ""}>
                    <EpisodeSections sections={entry.data.sections} isPremiere={isPremiere && !hasPremiereEnded} />
                    <TranscriptionWidget transcription={entry.data.transcription} isPremiere={isPremiere && !hasPremiereEnded} />
                </div>
            </div>
        </div>



        <!-- Social Share -->
        <SocialShare title={entry.data.title} />

        <!-- Comments Section (Chat handled above if active) -->
        {(!isPremiere || hasPremiereEnded) && (
            <div class="container" style="max-width: 1000px; margin-bottom: 6rem;">
                <Comments slug={entry.slug} />
            </div>
        )}

        <RelatedEpisodes 
            currentSlug={entry.slug} 
            tags={entry.data.tags} 
            listenedEpisodes={listenedEpisodes}
            favoriteEpisodes={favoriteEpisodes}
        />
    </article>
</Layout>

<script>
    // Listen for the Premiere Start event (dispatched by PremiereCountdown)
    document.addEventListener('premiere-started', () => {
        const widgets = document.getElementById('live-content-widgets');
        if (widgets) {
            widgets.style.display = 'block';
            // Allow display:block to apply before changing opacity
            requestAnimationFrame(() => {
                widgets.style.opacity = '1';
            });
        }
    });

    const setupEpisodePage = () => {
        const btns = document.querySelectorAll('.play-trigger-btn');
        btns.forEach(btn => {
            // Remove old listener if possible? No, we just rely on fresh DOM or clean initial add.
            // With Custom Router, the DOM is fresh, so the elements are new.
            // We just need to ensure we don't attach THIS setup loop multiple times to the SAME 'astro:page-load' event chain.
            btn.addEventListener('click', (e) => {
                const target = e.currentTarget as HTMLElement;
                const spotifyUrl = target.getAttribute('data-spotify-url');
                const audioUrl = target.getAttribute('data-audio-url');
                const url = spotifyUrl || audioUrl;
                
                if(url) {
                    document.dispatchEvent(new CustomEvent('play-episode', { detail: { url } }));
                }
            });
        });


    };

    // WE USE { once: true } to prevent accumulation of this specific closure if the script is re-run.
    // However, the Custom Router fires 'astro:page-load' on every navigation.
    // If we use { once: true }, this listener runs for the CURRENT page load, then unregisters.
    // If the script is re-executed on the NEXT navigation, it adds a NEW listener (once).
    document.addEventListener('DOMContentLoaded', setupEpisodePage);
</script>

