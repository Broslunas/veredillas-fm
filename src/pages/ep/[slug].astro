---
import { getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Comments from '../../components/Comments.astro';
import SocialShare from '../../components/SocialShare.astro';
import RelatedEpisodes from '../../components/RelatedEpisodes.astro';
import EpisodeParticipants from '../../components/EpisodeParticipants.astro';

export const prerender = false;

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/404');
}

const entry = await getEntry('episodios', slug);

if (!entry) {
  return Astro.redirect('/404');
}
const { Content } = await entry.render();

const formattedDate = entry.data.pubDate.toLocaleDateString('es-ES', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});
---

<Layout 
  title={entry.data.title} 
  description={entry.data.description}
  image={entry.data.image || "/logo.png"}
  imageAlt={entry.data.title}
  type="article"
  publishedTime={entry.data.pubDate.toISOString()}
  author={entry.data.author}
  tags={[`Temporada ${entry.data.season}`, `Episodio ${entry.data.episode}`, 'podcast', 'audio']}
>
    <article class="episode-article">
        <!-- Header -->
        <header class="article-header container">
            <div class="meta-row">
                <span class="date">{formattedDate}</span>
                <span class="dot">•</span>
                <span class="author">{entry.data.author}</span>
            </div>
            
            <h1>{entry.data.title}</h1>
            <p class="lead">{entry.data.description}</p>
            
            <div class="header-actions">
                <button 
                    id="share-story-trigger" 
                    class="btn-share-story"
                    data-title={entry.data.title}
                    data-image={entry.data.image || "/logo.png"}
                    data-author={entry.data.author}
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="18" cy="5" r="3"></circle><circle cx="6" cy="12" r="3"></circle><circle cx="18" cy="19" r="3"></circle><line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line><line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line></svg>
                    Compartir Historia
                </button>
            </div>
        </header>

        {entry.data.image && (
            <div class="featured-image container">
                <img 
                    src={entry.data.image} 
                    alt={entry.data.title} 
                    class="hero-image" 
                    transition:name={`cover-${entry.slug}`}
                />
            </div>
        )}

        <!-- Player -->
        <div class="player-container container">
            {entry.data.spotifyUrl && (
                <div 
                    id="episode-player-placeholder" 
                    data-spotify-url={entry.data.spotifyUrl}
                    data-title={entry.data.title}
                    data-image={entry.data.image}
                    data-author={entry.data.author}
                ></div>
            )}
        </div>

        <!-- Content -->
        <div class="content-container container">
            <div class="content-body">
                <Content />
            </div>
            
            <div class="sidebar">
                <div class="sidebar-widget">
                    <h3>Detalles</h3>
                    <ul class="details-list">
                        <li>
                            <strong>Temporada:</strong> {entry.data.season}
                        </li>
                        <li>
                            <strong>Episodio:</strong> {entry.data.episode}
                        </li>
                        <li>
                            <strong>Duración:</strong> {entry.data.duration}
                        </li>
                    </ul>
                </div>
                
                <EpisodeParticipants participants={entry.data.participants} />
            </div>
        </div>


        <!-- Social Share -->
        <SocialShare title={entry.data.title} />

        <!-- Comments Section -->
        <div class="container" style="max-width: 1000px; margin-bottom: 6rem;">
            <Comments slug={entry.slug} />
        </div>

        <RelatedEpisodes currentSlug={entry.slug} tags={entry.data.tags} />
    </article>
</Layout>

<script>
    const setupEpisodePage = () => {
        const btns = document.querySelectorAll('.play-trigger-btn');
        btns.forEach(btn => {
            // Remove old listener if possible? No, we just rely on fresh DOM or clean initial add.
            // With Custom Router, the DOM is fresh, so the elements are new.
            // We just need to ensure we don't attach THIS setup loop multiple times to the SAME 'astro:page-load' event chain.
            btn.addEventListener('click', (e) => {
                const target = e.currentTarget as HTMLElement;
                const url = target.getAttribute('data-spotify-url');
                if(url) {
                    document.dispatchEvent(new CustomEvent('play-episode', { detail: { url } }));
                }
            });
        });

        // Share Story Trigger
        const shareBtn = document.getElementById('share-story-trigger');
        if (shareBtn) {
            shareBtn.addEventListener('click', () => {
                const title = shareBtn.getAttribute('data-title');
                const image = shareBtn.getAttribute('data-image');
                const author = shareBtn.getAttribute('data-author');
                
                document.dispatchEvent(new CustomEvent('share-story', { 
                    detail: { title, image, author } 
                }));
            });
        }
    };

    // WE USE { once: true } to prevent accumulation of this specific closure if the script is re-run.
    // However, the Custom Router fires 'astro:page-load' on every navigation.
    // If we use { once: true }, this listener runs for the CURRENT page load, then unregisters.
    // If the script is re-executed on the NEXT navigation, it adds a NEW listener (once).
    document.addEventListener('DOMContentLoaded', setupEpisodePage);
</script>

<style>
    .article-header {
        padding: var(--spacing-md) var(--spacing-md) var(--spacing-lg);
        text-align: center;
        max-width: 900px;
        margin: 0 auto; /* Center horizontally */
    }

    .meta-row {
        color: var(--color-text-muted);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: var(--spacing-md);
    }

    .dot { margin: 0 var(--spacing-sm); }

    h1 {
        font-size: clamp(2rem, 4vw, 3.5rem);
        margin-bottom: var(--spacing-md);
        line-height: 1.1;
    }

    .lead {
        font-size: 1.25rem;
        color: var(--color-text-muted);
        line-height: 1.6;
    }

    .header-actions {
        margin-top: var(--spacing-md);
        display: flex;
        justify-content: center;
    }

    .btn-share-story {
        display: flex;
        align-items: center;
        gap: 8px;
        background: rgba(255,255,255,0.1);
        border: 1px solid rgba(255,255,255,0.2);
        color: white;
        padding: 10px 20px;
        border-radius: 100px;
        font-family: inherit;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .btn-share-story:hover {
        background: white;
        color: black;
        transform: translateY(-2px);
    }

    .featured-image {
        margin-bottom: var(--spacing-xl);
        border-radius: var(--radius-lg);
        overflow: hidden;
        max-width: 1000px;
    }

    .hero-image {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: cover;
        border-radius: var(--radius-lg);
        border: 1px solid var(--color-border);
    }

    .player-container {
        max-width: 800px;
        margin-bottom: var(--spacing-2xl);
        position: relative; /* Context for absolute potentially, but we use body-relative usually */
    }

    #episode-player-placeholder {
        width: 100%;
        height: 160px; /* Standard height for expanded Spotify embed */
        border-radius: 12px;
        background: rgba(255,255,255,0.05); /* Visual placeholder */
    }

    .content-container {
        display: grid;
        grid-template-columns: 1fr 300px;
        gap: var(--spacing-2xl);
        max-width: 1000px;
        padding-bottom: var(--spacing-2xl);
    }

    .content-body {
        font-size: 1.125rem;
        color: var(--color-text-main);
    }

    /* Markdown Styles */
    .content-body :global(h2) {
        font-size: 1.75rem;
        margin-top: var(--spacing-xl);
        margin-bottom: var(--spacing-md);
        color: var(--color-text-main);
    }

    .content-body :global(p) {
        margin-bottom: var(--spacing-md);
        line-height: 1.7;
    }

    .content-body :global(ul), .content-body :global(ol) {
        margin-bottom: var(--spacing-md);
        padding-left: var(--spacing-lg);
    }
    
    .content-body :global(li) {
        margin-bottom: var(--spacing-sm);
    }

    /* Sidebar */
    .sidebar-widget {
        background: var(--color-surface);
        padding: var(--spacing-lg);
        border-radius: var(--radius-lg);
        border: 1px solid var(--color-border);
    }

    .sidebar-widget h3 {
        margin-bottom: var(--spacing-md);
        font-size: 1.25rem;
    }

    .details-list {
        list-style: none;
    }

    .details-list li {
        display: flex;
        justify-content: space-between;
        padding: var(--spacing-sm) 0;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .details-list li:last-child {
        border-bottom: none;
    }
    
    .details-list strong {
        color: var(--color-text-muted);
    }

    @media (max-width: 768px) {
        .content-container {
            grid-template-columns: 1fr;
        }
        
        .sidebar {
            order: -1; 
            margin-bottom: var(--spacing-lg);
        }
    }
</style>
