<script>
    // Define interfaces for YouTube API logic
    interface YTPlayer {
        playVideo(): void;
        pauseVideo(): void;
        mute(): void;
        unMute(): void;
        getPlayerState(): number;
        getIframe(): HTMLIFrameElement;
        destroy(): void;
    }

    interface YTEvent {
        target: YTPlayer;
        data: number;
    }

    // Augment window to include YouTube API globals
    declare global {
        interface Window {
            onYouTubeIframeAPIReady: () => void;
            YT: {
                Player: new (id: string, options: any) => YTPlayer;
                PlayerState: {
                    ENDED: number;
                    PLAYING: number;
                    PAUSED: number;
                };
            };
        }
    }

    let players: Record<string, YTPlayer> = {};
    let playbackObserver: IntersectionObserver;
    let loadingObserver: IntersectionObserver;
    let apiReady = false;
    const queue: string[] = [];
    let stateCache = new Map<string, number>(); // Cache player states

    // Load YouTube IFrame API
    const tag = document.createElement('script');
    tag.src = "https://www.youtube.com/iframe_api";
    const firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag?.parentNode?.insertBefore(tag, firstScriptTag);

    window.onYouTubeIframeAPIReady = function() {
        apiReady = true;
        processQueue();
    };

    function processQueue() {
        while (queue.length > 0) {
            const id = queue.shift();
            if (id) createPlayer(id);
        }
    }

    function createPlayer(id: string) {
        if (!apiReady) {
            if (!queue.includes(id)) queue.push(id);
            return;
        }

        if (players[id]) return; // Already created

        const element = document.getElementById(id);
        if (!element) return;

        const videoId = element.getAttribute('data-video-id');
        if (!videoId) return;

        players[id] = new window.YT.Player(id, {
            height: '100%',
            width: '100%',
            videoId: videoId,
            playerVars: {
                'playsinline': 1,
                'controls': 0, // HIDE CONTROLS
                'rel': 0,
                'modestbranding': 1,
                'showinfo': 0, 
                'iv_load_policy': 3, 
                'fs': 0,
                'disablekb': 1,
                'origin': window.location.origin
            },
            events: {
                'onStateChange': (e: YTEvent) => onPlayerStateChange(id, e)
            }
        });
    }

    function onPlayerStateChange(id: string, event: YTEvent) {
        stateCache.set(id, event.data);
        
        // Loop video when ended
        if (event.data === window.YT.PlayerState.ENDED) {
            event.target.playVideo();
        }
    }

    // Toggle Play/Pause on user interaction
    function togglePlay(id: string) {
        const player = players[id];
        if (player && typeof player.getPlayerState === 'function') {
            // Use cached state or fetch if available, but getPlayerState is reliable
            const state = player.getPlayerState();
            if (state === window.YT.PlayerState.PLAYING) {
                player.pauseVideo();
            } else {
                player.playVideo();
                player.unMute(); // Ensure sound is on
            }
        }
    }

    function initObservers() {
        // 1. Loading Observer: Preload players
        loadingObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                const el = entry.target as HTMLElement;
                const playerDiv = el.querySelector('.youtube-player');
                if (!playerDiv) return;
                
                const id = playerDiv.id;

                if (entry.isIntersecting) {
                    createPlayer(id);
                }
            });
        }, {
            root: document.querySelector('main'),
            rootMargin: '50% 0px 50% 0px' 
        });

        // 2. Playback Observer: Play visible, pause invisible
        playbackObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                const el = entry.target as HTMLElement;
                const playerDiv = el.querySelector('.youtube-player');
                if (!playerDiv) return;
                
                const id = playerDiv.id;
                const player = players[id];

                if (entry.isIntersecting) {
                    // Start playing if player exists
                    if (player && typeof player.playVideo === 'function') {
                        player.playVideo();
                    }
                } else {
                    // Pause if scrolling away
                    if (player && typeof player.pauseVideo === 'function') {
                        player.pauseVideo();
                    }
                }
            });
        }, {
            root: document.querySelector('main'),
            rootMargin: '0px',
            threshold: 0.6 // 60% visibility
        });

        const sections = document.querySelectorAll('.clip-section');
        sections.forEach(section => {
            loadingObserver.observe(section);
            playbackObserver.observe(section);
        });

        // Initialize click handlers on interaction layer
        document.querySelectorAll('.interaction-layer').forEach((layer) => {
            layer.addEventListener('click', (e) => {
                const targetId = (e.currentTarget as HTMLElement).getAttribute('data-target');
                if (targetId) togglePlay(targetId);
            });
        });
    }

    // Init
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
             initObservers();
             checkWatchParam();
             initUrlObserver();
        });
    } else {
        initObservers();
        checkWatchParam();
        initUrlObserver();
    }
    
     function checkWatchParam() {
         const urlParams = new URLSearchParams(window.location.search);
         const watchId = urlParams.get('watch');
         
         // If no watch param, set the first one to reflect current state
         if (!watchId) {
             const firstPlayer = document.querySelector('.youtube-player');
             if (firstPlayer) {
                 const firstId = firstPlayer.getAttribute('data-video-id');
                 if (firstId) {
                     const url = new URL(window.location.href);
                     url.searchParams.set('watch', firstId);
                     window.history.replaceState({}, '', url);
                 }
             }
         }
    }
    
    // Observer to update URL on scroll
    let urlObserver: IntersectionObserver;
    
    function initUrlObserver() {
        if (urlObserver) urlObserver.disconnect();
        
        urlObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const playerDiv = entry.target.querySelector('.youtube-player');
                    if (playerDiv) {
                         const videoId = playerDiv.getAttribute('data-video-id');
                         if (videoId) {
                             const url = new URL(window.location.href);
                             const currentWatch = url.searchParams.get('watch');
                             if (currentWatch !== videoId) {
                                 url.searchParams.set('watch', videoId);
                                 window.history.replaceState({}, '', url);
                             }
                         }
                    }
                }
            });
        }, {
            threshold: 0.7 // Must be mostly visible to count as "active"
        });
        
        document.querySelectorAll('.clip-section').forEach(section => {
            urlObserver.observe(section);
        });
    }



    // --- Button Handling (Re-written from scratch) ---

    async function loadLikes() {
        try {
            const response = await fetch('/api/clips/liked');
            if (response.ok) {
                const data = await response.json();
                const likedClips = data.likedClips || [];
                
                document.querySelectorAll('.like-btn').forEach(btn => {
                    const clipId = btn.getAttribute('data-clip-id');
                    if (clipId && likedClips.includes(clipId)) {
                        btn.classList.add('liked');
                        btn.querySelector('svg')?.setAttribute('fill', '#ef4444');
                    } else {
                        btn.classList.remove('liked');
                        btn.querySelector('svg')?.setAttribute('fill', 'none');
                    }
                });
            }
        } catch (e) {
            console.error('Error loading likes', e);
        }
    }

     // --- GLOBAL EVENT DELEGATION ---
    // We attach ONCE to the document. 
    // To handle this idempotently, we can set a property on window.
    
    if (!(window as any)._clipsEventDelegationAttached) {
        console.log('Attaching global clips event delegation');
        (window as any)._clipsEventDelegationAttached = true;
        
        document.addEventListener('click', async (e) => {
            const target = e.target as HTMLElement;
            
            // --- SHARE ---
            const shareBtn = target.closest('.share-btn');
            if (shareBtn) {
                e.stopPropagation();
                e.preventDefault();
                const btn = shareBtn as HTMLElement;
                const clipId = btn.getAttribute('data-clip-id');
                const url = new URL(window.location.href);
                if (clipId) url.searchParams.set('watch', clipId);
                
                navigator.clipboard.writeText(url.toString()).then(() => {
                    const originalHTML = btn.innerHTML;
                    btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>';
                    setTimeout(() => { btn.innerHTML = originalHTML; }, 2000);
                });
                return;
            }
            
            // --- LIKE ---
            const likeBtn = target.closest('.like-btn');
            if (likeBtn) {
                e.stopPropagation();
                e.preventDefault();
                const btn = likeBtn as HTMLElement;
                const clipId = btn.getAttribute('data-clip-id');
                if (!clipId) return;
                
                const isLiked = btn.classList.contains('liked');
                
                // Optimistic UI
                if (isLiked) {
                    btn.classList.remove('liked');
                    btn.querySelector('svg')?.setAttribute('fill', 'none');
                } else {
                    btn.classList.add('liked');
                    btn.querySelector('svg')?.setAttribute('fill', '#ef4444');
                    // Animation
                    btn.animate([
                        { transform: 'scale(1)' },
                        { transform: 'scale(1.3)' },
                        { transform: 'scale(1)' }
                    ], { duration: 200 });
                }

                try {
                    const res = await fetch('/api/clips/like', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ clipId })
                    });
                    
                    if (res.status === 401) {
                         alert('Inicia sesi√≥n para dar me gusta');
                         window.location.href = '/login';
                         return;
                    }
                } catch (err) {
                    console.error(err);
                    // Revert
                    if (isLiked) {
                        btn.classList.add('liked');
                        btn.querySelector('svg')?.setAttribute('fill', '#ef4444');
                    } else {
                        btn.classList.remove('liked');
                        btn.querySelector('svg')?.setAttribute('fill', 'none');
                    }
                }
            }
        });
    }

    // --- LIFECYCLE ---
    document.addEventListener('astro:page-load', () => {
         // Clean up old players
         Object.values(players).forEach(p => {
             if (typeof p.destroy === 'function') p.destroy();
         });
         players = {};
         loadingObserver?.disconnect();
         playbackObserver?.disconnect();
         urlObserver?.disconnect();
         
         initObservers();
         loadLikes(); 
         checkWatchParam();
         initUrlObserver();
    });
    
    // Initial run check
    if (document.readyState === 'loading') {
         document.addEventListener('DOMContentLoaded', () => loadLikes());
    } else {
         loadLikes();
    }
</script>
