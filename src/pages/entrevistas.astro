---
import Layout from '../layouts/Layout.astro';
import dbConnect from '../lib/mongodb';
import InterviewRequest from '../models/InterviewRequest';

export const prerender = false;

const token = Astro.url.searchParams.get('token');
const email = Astro.url.searchParams.get('email');

let request = null;
let error = null;

if (!token || !email) {
    error = "Enlace inválido. Faltan credenciales.";
} else {
    try {
        await dbConnect();
        const found = await InterviewRequest.findOne({ 
            token: token, 
            email: email.toLowerCase() 
        });

        if (!found) {
            error = "No se encontró ninguna invitación asociada a este enlace.";
        } else if (found.status === 'rejected') {
             error = "Esta invitación fue rechazada anteriormente.";
        } else if (found.status === 'completed') {
             error = "Esta invitación ya no está activa.";
        } else {
            // Can be: 'pending', 'invited', 'approved'
            request = found;
        }
    } catch (e) {
        console.error(e);
        error = "Ocurrió un error al verificar la invitación.";
    }
}
