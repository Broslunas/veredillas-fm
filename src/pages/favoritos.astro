---
import Layout from '../layouts/Layout.astro';
import { getUserFromCookie } from '../lib/auth';
import { getCollection } from 'astro:content';
import mongoose from 'mongoose';
import User from '../models/User';

export const prerender = false;

// Obtener usuario autenticado
const cookieHeader = Astro.request.headers.get('cookie');
const userPayload = getUserFromCookie(cookieHeader);

// Si no hay usuario, redirigir a login
if (!userPayload) {
  return Astro.redirect('/login');
}

// Obtener favoritos del usuario
let favorites: string[] = [];
try {
  if (mongoose.connection.readyState !== 1) {
    const MONGODB_URI = import.meta.env.MONGODB_URI;
    if (MONGODB_URI) {
      await mongoose.connect(MONGODB_URI);
    }
  }
  const userDoc = await User.findById(userPayload.userId);
  if (userDoc) {
    favorites = userDoc.favorites || [];
  }
  // Assign userDoc to user for template access, ensuring it's not null/undefined if possible
  // Using 'any' cast or interface to avoid type issues in template if accessing property directly
  var user = userDoc; 
} catch (error) {
  console.error('Error loading favorites:', error);
}

// Fallback user object if DB fails but we have payload
if (!user && userPayload) {
  user = {
    name: userPayload.name,
    picture: '', // We don't have picture in payload usually
    favorites: []
  } as any;
}

// Obtener episodios favoritos
const allEpisodes = await getCollection('episodios');
const favoriteEpisodes = allEpisodes
  .filter(episode => favorites.includes(episode.slug))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
