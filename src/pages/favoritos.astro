        </svg>
        Mis Favoritos
      </h1>
      {favoriteEpisodes.length > 0 && (
        <div class="header-actions">
          <p class="favorites-count">{favoriteEpisodes.length} {favoriteEpisodes.length === 1 ? 'episodio' : 'episodios'}</p>
          <button class="share-btn" id="share-favorites-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="18" cy="5" r="3"/><circle cx="6" cy="12" r="3"/><circle cx="18" cy="19" r="3"/><line x1="8.59" y1="13.51" x2="15.42" y2="17.49"/><line x1="15.41" y1="6.51" x2="8.59" y2="10.49"/>
            </svg>
            Compartir
          </button>
        </div>
      )}
    </div>

    <!-- Share Modal -->
    <div id="share-modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2>Compartir mis favoritos</h2>
          <button class="modal-close" id="close-modal">&times;</button>
        </div>
        <div class="modal-body">
          <!-- Tab navigation -->
          <div class="share-tabs">
            <button class="share-tab active" data-tab="link">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0  0 0-7.07-7.07l-1.72 1.71"/>
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
              </svg>
              Enlace
            </button>
            <button class="share-tab" data-tab="image">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <circle cx="8.5" cy="8.5" r="1.5"/>
                <polyline points="21 15 16 10 5 21"/>
              </svg>
              Imagen
            </button>
          </div>

          <!-- Link tab content -->
          <div class="tab-content active" data-content="link">
            <p>Comparte tu lista de favoritos con tus amigos:</p>
            <div class="share-url-container">
              <input type="text" id="share-url" readonly class="share-url-input" value="Generando enlace..." />
              <button id="copy-url-btn" class="copy-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
