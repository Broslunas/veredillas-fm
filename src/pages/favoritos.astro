          </div>

          <!-- Image tab content -->
          <div class="tab-content" data-content="image">
            <p>Descarga una imagen de tus favoritos:</p>
            <div class="image-preview-container">
              <div id="share-image-card" class="share-image-card">
                <div class="card-header-img">
                  <div class="card-logo">
                    <img src="/logo.png" alt="Veredillas FM" />
                  </div>
                  <h3>Mis Favoritos en Veredillas FM</h3>
                </div>
                <div class="card-content-img">
                  <div class="user-info-img">
                    {user.picture ? (
                      <img src={user.picture} alt={user.name} class="user-avatar-img" />
                    ) : (
                      <div class="user-avatar-placeholder-img">
                        {user.name.charAt(0).toUpperCase()}
                      </div>
                    )}
                    <span class="user-name-img">{user.name}</span>
                  </div>
                  <div class="episodes-list-img">
                    {favoriteEpisodes.slice(0, 5).map((episode, index) => (
                      <div class="episode-item-img">
                        <span class="episode-number">{index + 1}</span>
                        <span class="episode-title-img">{episode.data.title}</span>
                      </div>
                    ))}
                    {favoriteEpisodes.length > 5 && (
                      <div class="more-episodes">
                        +{favoriteEpisodes.length - 5} más
                      </div>
                    )}
                  </div>
                </div>
                <div class="card-footer-img">
                  <span>{favoriteEpisodes.length} episodios favoritos</span>
                </div>
              </div>
            </div>
            <button id="download-image-btn" class="download-btn">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" y1="15" x2="12" y2="3"/>
              </svg>
              Descargar Imagen
            </button>
            <p class="share-note">La imagen se descargará en formato PNG.</p>
          </div>
        </div>
      </div>
    </div>

    {favoriteEpisodes.length === 0 ? (
      <div class="empty-state">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
        <h2>Aún no tienes favoritos</h2>
        <p>Explora nuestros episodios y guarda tus preferidos haciendo clic en el corazón ❤️</p>
        <a href="/ep" class="btn-explore">Explorar Episodios</a>
      </div>
    ) : (
      <div class="episodes-grid">
        {favoriteEpisodes.map((episode) => (
          <article class="episode-card">
            <a href={`/ep/${episode.slug}`} class="episode-link">
              {episode.data.image && (
                <div class="episode-image">
                  <img src={episode.data.image} alt={episode.data.title} loading="lazy" />
                </div>
              )}
              <div class="episode-content">
                <h2 class="episode-title">{episode.data.title}</h2>
                <p class="episode-description">{episode.data.description}</p>
                <div class="episode-meta">
                  <time datetime={episode.data.pubDate.toISOString()}>
                    {new Date(episode.data.pubDate).toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  {episode.data.duration && (
                    <>
                      <span class="separator">•</span>
                      <span>{episode.data.duration}</span>
                    </>
                  )}
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    )}
  </div>
</Layout>

