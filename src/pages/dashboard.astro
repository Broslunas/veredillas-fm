---
import Layout from '../layouts/Layout.astro';
import EpisodeCard from '../components/EpisodeCard.astro';
import { getCollection } from 'astro:content';
import User from '../models/User';
import { getUserFromCookie } from '../lib/auth';
import type { IUser } from '../models/User';
import mongoose from 'mongoose';
import { getLevel, getNextLevel, getProgressToNextLevel } from '../lib/gamification';
import LevelsModal from '../components/LevelsModal.astro';

export const prerender = false;

// Auth Check
const userPayload = getUserFromCookie(Astro.request.headers.get('cookie'));
if (!userPayload) {
  return Astro.redirect('/'); 
}

// DB Connect
if (mongoose.connection.readyState !== 1) {
   const MONGODB_URI = import.meta.env.MONGODB_URI;
   if (!MONGODB_URI) throw new Error('MONGODB_URI not configured');
   await mongoose.connect(MONGODB_URI);
}

// Fetch User
const user = await User.findById(userPayload.userId) as IUser;

if (!user) {
  return Astro.redirect('/');
}

// Format Time
const formatTime = (seconds: number) => {
   const hrs = Math.floor(seconds / 3600);
   const mins = Math.floor((seconds % 3600) / 60);
   
   if (hrs > 0) return `${hrs}h ${mins}m`;
   return `${mins}m`; 
};

// Get Favorites
const allEpisodes = await getCollection('episodios');
// Map for fast lookup
const favoritesMap = new Map(allEpisodes.map(ep => [ep.slug, ep]));

// Preserve order from user.favorites
const sortedFavorites = (user.favorites || [])
    .map(slug => favoritesMap.get(slug))
    .filter((ep): ep is typeof allEpisodes[0] => !!ep);

const listeningTimeStr = formatTime(user.listeningTime || 0);

// Gamification Calc
const currentLevel = getLevel(user.listeningTime || 0);
const nextLevel = getNextLevel(user.listeningTime || 0);
const progressPercent = getProgressToNextLevel(user.listeningTime || 0);
const hoursToNext = nextLevel ? Math.ceil((nextLevel.minSeconds - (user.listeningTime || 0)) / 3600) : 0;
---

<Layout title="Dashboard - Veredillas FM">
    <div class="container-dashboard">
        <header class="dashboard-header animate-fade-in">
            <div class="header-content">
                <div class="avatar-ring">
                     <img src={user.picture || '/logo.png'} alt={user.name} class="user-avatar" />
                </div>
                <div>
                     <h1 class="dashboard-title">Hola, <span class="text-gradient">{user.name.split(' ')[0]}</span></h1>
                     <div class="level-badge" style={`background: ${currentLevel.color}20; color: ${currentLevel.color}; border-color: ${currentLevel.color}40;`}>
                        <span class="level-icon">{currentLevel.icon}</span>
                        <span class="level-name">{currentLevel.name}</span>
                     </div>
                     <p class="dashboard-subtitle">Tu resumen de actividad en Veredillas FM.</p>
                     
                     <div class="header-actions" style="margin-top: 1rem;">
                        <a href="/perfil" class="btn-sm btn-secondary">Editar Perfil</a>
                     </div>
                </div>
            </div>
        </header>
        <!-- Progress / Level Section -->
        <section class="level-section animate-fade-in-up glass-panel">
            <div class="level-info">
                <h3>Nivel Actual</h3>
                <p style="margin-bottom: 0.5rem;">{currentLevel.description}</p>
                <button class="view-levels-btn">Ver progresi√≥n de niveles</button>
            </div>
            
            <div class="progress-container">
                <div class="progress-labels">
                    <span class="curr-prog">{Math.floor(progressPercent)}% completado</span>
                    {nextLevel ? (
                        <span class="next-prog">Siguiente: {nextLevel.name} ({hoursToNext}h m√°s)</span>
                    ) : (
                        <span class="next-prog">¬°Nivel M√°ximo!</span>
                    )}
                </div>
                <div class="progress-bar-bg">
                    <div class="progress-bar-fill" style={`width: ${progressPercent}%; background: ${currentLevel.color};`}></div>
                </div>
            </div>
        </section>
        
        <div class="stats-grid animate-fade-in-up" style="animation-delay: 0.1s;">
            <div class="stat-card glass-panel">
                <div class="stat-icon-wrapper">
                    <span class="stat-icon">üéß</span>
                </div>
                <div class="stat-info">
                     <h3>Tiempo Escuchado</h3>
                     <p class="stat-value">{listeningTimeStr}</p>
                     <span class="stat-sub">en total</span>
                </div>
            </div>
            
             <div class="stat-card glass-panel">
                <div class="stat-icon-wrapper secondary">
                    <span class="stat-icon">‚ù§Ô∏è</span>
                </div>
                <div class="stat-info">
                     <h3>Favoritos</h3>
                     <p class="stat-value">{user.favorites?.length || 0}</p>
                     <span class="stat-sub">episodios guardados</span>
                </div>
            </div>
        </div>
        
        <section class="favorites-section animate-fade-in-up" style="animation-delay: 0.1s;">
            <div class="section-header">
                <h2>Tus Favoritos</h2>
                <div class="section-line"></div>
                <a href="/favoritos" class="view-all-link">Gestionar & Compartir</a>
            </div>
            
            {sortedFavorites.length > 0 ? (
                <div class="episodes-grid">
                    {sortedFavorites.map(ep => (
                        <EpisodeCard post={ep} />
                    ))}
                </div>
            ) : (
                <div class="empty-state glass-panel">
                    <div class="empty-icon">üìÇ</div>
                    <h3>A√∫n no tienes favoritos</h3>
                    <p>Guarda los episodios que m√°s te gusten para escucharlos cuando quieras.</p>
                    <a href="/episodios" class="btn btn-primary">Explorar Episodios</a>
                </div>
            )}
        </section>
    </div>
    <LevelsModal currentLevelName={currentLevel.name} listeningTime={user.listeningTime || 0} />
</Layout>

<style>
    .container-dashboard {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
        min-height: 80vh;
    }

    /* Header */
    .dashboard-header {
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    
    .header-content {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }
    
    .avatar-ring {
        padding: 4px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
        display: inline-block;
    }
    
    .user-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 4px solid var(--color-bg);
        object-fit: cover;
        display: block;
    }

    .dashboard-title {
        font-size: 2.5rem;
        margin: 0;
        line-height: 1.2;
    }
    
    .dashboard-subtitle {
        font-size: 1.1rem;
        color: var(--color-text-muted);
        margin: 0.5rem 0 0 0;
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.5rem;
        margin-bottom: 4rem;
    }

    .stat-card {
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        border-radius: 16px;
        transition: transform 0.3s ease, border-color 0.3s ease;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        border-color: rgba(var(--color-primary-rgb), 0.3);
    }

    .stat-icon-wrapper {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        background: rgba(var(--color-primary-rgb), 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
    }
    
    .stat-icon-wrapper.secondary {
        background: rgba(236, 72, 153, 0.1); /* Pink tint */
    }

    .stat-info h3 {
        font-size: 0.9rem;
        color: var(--color-text-muted);
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        margin: 0.2rem 0;
        background: linear-gradient(to right, #fff, #ccc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .stat-sub {
        font-size: 0.85rem;
        color: var(--color-text-muted);
        opacity: 0.8;
    }

    /* Level Badge */
    .level-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        margin: 0.5rem 0;
        border: 1px solid transparent;
    }
    
    .level-section {
        margin-bottom: 2rem;
        padding: 1.5rem;
        border-radius: 16px;
    }
    
    .level-info h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.1rem;
    }
    .level-info p {
        margin: 0 0 1.5rem 0;
        color: var(--color-text-muted);
        font-size: 0.95rem;
    }
    
    .progress-container {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .progress-labels {
        display: flex;
        justify-content: space-between;
        font-size: 0.8rem;
        color: var(--color-text-dim);
        font-weight: 500;
    }
    
    .progress-bar-bg {
        height: 8px;
        background: rgba(255,255,255,0.1);
        border-radius: 10px;
        overflow: hidden;
    }
    
    .progress-bar-fill {
        height: 100%;
        border-radius: 10px;
        transition: width 1s ease-out;
    }

    /* Favorites Section */
    .section-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .section-header h2 {
        font-size: 1.8rem;
        margin: 0;
        white-space: nowrap;
    }
    
    .section-line {
        height: 1px;
        background: linear-gradient(90deg, rgba(255,255,255,0.1), transparent);
        width: 100%;
    }

    .episodes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        border-radius: 16px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }
    
    .empty-icon {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        opacity: 0.5;
    }
    
    .empty-state h3 {
        margin: 0;
        font-size: 1.5rem;
    }
    
    .empty-state p {
        color: var(--color-text-muted);
        max-width: 400px;
        margin-bottom: 1.5rem;
    }

    /* Animations */
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
    }
    
    .animate-fade-in-up {
        opacity: 0;
        animation: fadeInUp 0.8s ease-out forwards;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .btn-sm {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
        display: inline-block;
    }
    
    .btn-secondary {
        background: rgba(255,255,255,0.1);
        color: var(--color-text);
        border: 1px solid rgba(255,255,255,0.2);
    }
    
    .btn-secondary:hover {
        background: rgba(255,255,255,0.2);
    }
    
    .view-all-link {
        font-size: 0.9rem;
        color: var(--color-primary);
        text-decoration: none;
        white-space: nowrap;
        font-weight: 500;
    }
    
    .view-all-link:hover {
        text-decoration: underline;
    }
    
    @media (max-width: 768px) {
        .dashboard-header {
            text-align: center;
        }
        .header-content {
            flex-direction: column;
        }
        
        .dashboard-title {
            font-size: 2rem;
        }
    }

    .view-levels-btn {
        background: transparent;
        border: none;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.75rem;
        text-decoration: underline;
        cursor: pointer;
        padding: 0;
        margin-bottom: 0.5rem;
        transition: all 0.2s;
        display: inline-block;
    }
    
    .view-levels-btn:hover {
        opacity: 1;
        color: white;
    }
</style>
